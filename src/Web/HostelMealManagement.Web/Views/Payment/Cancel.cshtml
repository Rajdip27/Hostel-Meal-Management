@{
    ViewData["Title"] = "Payment Cancelled";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .cancel-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .cancel-card {
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .cancel-header {
        background: linear-gradient(135deg, #ffc107, #e0a800);
        color: #212529;
        text-align: center;
        padding: 30px 20px;
    }

    .cancel-icon {
        font-size: 64px;
        margin-bottom: 10px;
    }

    .cancel-body {
        padding: 30px;
        background-color: #ffffff;
        text-align: center;
    }

    .cancel-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #856404;
        margin-bottom: 15px;
    }

    .cancel-text {
        color: #6c757d;
        font-size: 0.95rem;
        margin-bottom: 25px;
        line-height: 1.6;
    }

    .btn-action {
        padding: 10px 26px;
        font-size: 0.95rem;
        border-radius: 30px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
    }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(0, 0, 0, 0.15);
        }
</style>

<div class="container cancel-wrapper">
    <div class="col-lg-6 col-md-8 col-sm-12">
        <div class="card cancel-card">
            <div class="cancel-header">
                <div class="cancel-icon">⚠️</div>
                <h3 class="mb-0">Payment Cancelled</h3>
            </div>

            <div class="cancel-body">
                <div class="cancel-title">
                    You have cancelled the payment process.
                </div>

                <div class="cancel-text">
                    No amount has been charged to your account.
                    <br />
                    You may retry the payment at any time.
                </div>

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a href="/Payment/Pay" class="btn btn-success btn-action">
                        💳 Pay Again
                    </a>

                    <a href="/" class="btn btn-secondary btn-action">
                        🏠 Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
