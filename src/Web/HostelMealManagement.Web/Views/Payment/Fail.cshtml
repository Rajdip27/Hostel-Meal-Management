@{
    ViewData["Title"] = "Payment Failed";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .failure-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .failure-card {
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .failure-header {
        background: linear-gradient(135deg, #dc3545, #b02a37);
        color: #fff;
        text-align: center;
        padding: 30px 20px;
    }

    .failure-icon {
        font-size: 64px;
        margin-bottom: 10px;
    }

    .failure-body {
        padding: 30px;
        background-color: #ffffff;
        text-align: center;
    }

    .failure-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #dc3545;
        margin-bottom: 15px;
    }

    .failure-text {
        color: #6c757d;
        font-size: 0.95rem;
        margin-bottom: 25px;
        line-height: 1.6;
    }

    .btn-action {
        padding: 10px 26px;
        font-size: 0.95rem;
        border-radius: 30px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
    }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(0, 0, 0, 0.15);
        }
</style>

<div class="container failure-wrapper">
    <div class="col-lg-6 col-md-8 col-sm-12">
        <div class="card failure-card">
            <div class="failure-header">
                <div class="failure-icon">❌</div>
                <h3 class="mb-0">Payment Failed</h3>
            </div>

            <div class="failure-body">
                <div class="failure-title">
                    Sorry! Your payment could not be completed.
                </div>

                <div class="failure-text">
                    Something went wrong while processing your transaction.
                    <br />
                    Please try again or contact support if the problem persists.
                </div>

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a href="/Payment/Pay" class="btn btn-warning btn-action">
                        🔄 Try Again
                    </a>

                    <a href="/" class="btn btn-secondary btn-action">
                        🏠 Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
