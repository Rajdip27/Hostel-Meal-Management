@using HostelMealManagement.Application.Services
@using HostelMealManagement.Infrastructure.Helper.Acls
@inject IRolePermissionService Permission
@inject ISignInHelper SignInHelper

@model List<HostelMealManagement.Application.ViewModel.MealAttendanceVm>

@{
    ViewData["Title"] = "Meal Attendance List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var role = SignInHelper.Roles;
}

<!-- ================= PREMIUM CORPORATE THEME ================= -->
<style>
    body {
        background: #f5f7fb !important;
        font-family: "Segoe UI", sans-serif;
    }

    h2 {
        color: #1f2937;
        font-weight: 700;
        margin-bottom: 18px;
    }

    /* ===== Primary Button ===== */
    .btn-primary {
        background: linear-gradient(135deg, #2563eb, #1e40af) !important;
        border: none !important;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 22px;
        color: #fff !important;
        box-shadow: 0 8px 20px rgba(37,99,235,0.35);
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #1e40af, #1e3a8a) !important;
            box-shadow: 0 10px 28px rgba(37,99,235,0.45);
            transform: translateY(-1px);
        }

    /* ===== Table Wrapper ===== */
    .table-responsive {
        background: #ffffff;
        padding: 20px;
        border-radius: 16px;
        border: 1px solid #e5e7eb;
        box-shadow: 0 12px 35px rgba(0,0,0,0.08);
    }

    /* ===== Table Header ===== */
    .table thead th {
        background: linear-gradient(135deg, #1e3a8a, #2563eb) !important;
        color: #ffffff !important;
        padding: 14px;
        font-size: 14px;
        font-weight: 600;
        text-align: center;
        border: none !important;
        letter-spacing: .4px;
        white-space: nowrap;
    }

    /* ===== Table Cells ===== */
    .table td {
        vertical-align: middle !important;
        padding: 12px;
        font-size: 14px;
        color: #374151;
        text-align: center;
    }

    .left-text {
        text-align: left !important;
        font-weight: 500;
    }

    /* ===== Row Hover ===== */
    .table tbody tr:hover {
        background-color: #eef2ff;
        transition: 0.2s ease;
    }

    /* ===== Check / Cross Icons ===== */
    .check-icon {
        font-size: 20px;
        color: #16a34a;
        font-weight: bold;
    }

    .cross-icon {
        font-size: 20px;
        color: #dc2626;
        font-weight: bold;
    }

    /* ===== Action Buttons ===== */
    .btn-info {
        background: linear-gradient(135deg, #3b82f6, #2563eb) !important;
        border: none !important;
        color: #fff !important;
        border-radius: 8px;
        padding: 6px 12px;
        box-shadow: 0 6px 16px rgba(59,130,246,0.35);
        transition: 0.25s ease;
    }

        .btn-info:hover {
            background: linear-gradient(135deg, #1d4ed8, #1e40af) !important;
            box-shadow: 0 8px 22px rgba(59,130,246,0.45);
        }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444, #b91c1c) !important;
        border: none !important;
        border-radius: 8px;
        padding: 6px 12px;
        color: #fff !important;
        box-shadow: 0 6px 16px rgba(239,68,68,0.35);
        transition: 0.25s ease;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #dc2626, #991b1b) !important;
            box-shadow: 0 8px 22px rgba(239,68,68,0.45);
        }

    .action-buttons .btn {
        margin-right: 6px;
    }
</style>

<h2 class="mb-3">Meal Attendance List</h2>

<a class="btn btn-primary mb-3" asp-action="CreateOrEdit">
    Add New Meal Attendance
</a>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Meal Date</th>
                <th>Member</th>
                <th>Breakfast</th>
                <th>Lunch</th>
                <th>Dinner</th>
                <th>Guest</th>
                <th>Guest Breakfast</th>
                <th>B-Qty</th>
                <th>Guest Lunch</th>
                <th>L-Qty</th>
                <th>Guest Dinner</th>
                <th>D-Qty</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var a in Model)
            {
            <tr>
                <td>@a.Id</td>
                <td>@a.MealDate.ToString("yyyy-MM-dd")</td>
                <td class="left-text">@a.MemberName</td>

                <td>
                    @Html.Raw(a.IsBreakfast
                                        ? "<span class='check-icon'>✔</span>"
                                        : "<span class='cross-icon'>✖</span>")
                </td>

                <td>
                    @Html.Raw(a.IsLunch
                                        ? "<span class='check-icon'>✔</span>"
                                        : "<span class='cross-icon'>✖</span>")
                </td>

                <td>
                    @Html.Raw(a.IsDinner
                                        ? "<span class='check-icon'>✔</span>"
                                        : "<span class='cross-icon'>✖</span>")
                </td>

                <td>
                    @Html.Raw(a.IsGuest
                                        ? "<span class='check-icon'>✔</span>"
                                        : "<span class='cross-icon'>✖</span>")
                </td>

                <td>
                    @Html.Raw(a.GuestIsBreakfast
                                        ? "<span class='check-icon'>✔</span>"
                                        : "<span class='cross-icon'>✖</span>")
                </td>

                <td>@a.GuestBreakfastQty</td>

                <td>
                    @Html.Raw(a.GuestIsLunch
                                        ? "<span class='check-icon'>✔</span>"
                                        : "<span class='cross-icon'>✖</span>")
                </td>

                <td>@a.GuestLunchQty</td>

                <td>
                    @Html.Raw(a.GuestIsDinner
                                        ? "<span class='check-icon'>✔</span>"
                                        : "<span class='cross-icon'>✖</span>")
                </td>

                <td>@a.GuestDinnerQty</td>

                <td class="action-buttons">
                    <div style="display:flex; align-items:center; gap:6px;">
                        <a class="btn btn-sm btn-info"
                           asp-action="CreateOrEdit"
                           asp-route-id="@a.Id">
                            Edit
                        </a>

                        @if (Permission.CanDelete(role))
                            {
                                <form asp-action="Delete"
                                      asp-route-id="@a.Id"
                                      method="post"
                                      onsubmit="return confirm('Are you sure?');">
                                    <button type="submit"
                                            class="btn btn-sm btn-danger">
                                        Delete
                                    </button>
                                </form>
                            }
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
