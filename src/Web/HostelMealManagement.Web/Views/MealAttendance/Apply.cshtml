@using HostelMealManagement.Core.Entities
@model List<MealBill>
@{
    ViewData["Title"] = "Meal Bills";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-3">
    <h2>Meal Bills</h2>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Member Name</th>
                <th>Card No</th>
                <th>Total Bazar</th>
                <th>Total Member Meal</th>
                <th>Total Guest Meal</th>
                <th>Total Meal</th>
                <th>Meal Rate</th>
                <th>Meal Amount</th>
                <th>House Bill</th>
                <th>Utility Bill</th>
                <th>Other Bill</th>
                <th>Total Payable</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bill in Model)
            {
                <tr>
                    <td>@bill.Member.Name</td>
                    <td>@bill.Member.MemberCode</td>
                    <td>@bill.TotalBazar</td>
                    <td>@bill.TotalMemberMeal</td>
                    <td>@bill.TotalGuestMeal</td>
                    <td>@bill.TotalMeal</td>
                    <td>@bill.MealRate</td>
                    <td>@bill.MealAmount</td>
                    <td>@bill.HouseBill</td>
                    <td>@bill.UtilityBill</td>
                    <td>@bill.OtherBill</td>
                    <td>@bill.TotalPayable</td>
                </tr>
            }
        </tbody>
    </table>
</div>
