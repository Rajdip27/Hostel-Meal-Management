@model HostelMealManagement.Application.ViewModel.MealAttendanceVm

@{
    ViewData["Title"] = Model.Id > 0 ? "Edit Meal Attendance" : "Create Meal Attendance";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- ====================== CORPORATE BLUE GLOSSY THEME ====================== -->
<style>

    body {
        background: #ffffff !important;
        font-family: "Segoe UI", sans-serif;
    }

    /* ---------- PAGE TITLE ---------- */
    .page-title {
        font-size: 32px;
        font-weight: 700;
        color: #1e3a8a;
        margin-bottom: 8px;
    }

    .page-underline {
        height: 2px;
        width: 100%;
        background: #cbd5e1;
        opacity: 0.7;
        margin-bottom: 25px;
    }

    /* ---------- FORM WRAPPER ---------- */
    .form-wrapper {
        background: rgba(255,255,255,0.8);
        padding: 35px;
        border-radius: 16px;
        border: 1px solid rgba(200,200,200,0.35);
        box-shadow: 0 8px 28px rgba(0,0,0,0.08);
        transition: .25s ease;
    }

        .form-wrapper:hover {
            transform: translateY(-2px);
            box-shadow: 0 14px 38px rgba(0,0,0,0.12);
        }

    /* ---------- INPUTS & DROPDOWNS ---------- */
    .form-label {
        font-weight: 600;
        color: #203254;
    }

    .form-control,
    .form-select {
        padding: 12px 14px !important;
        height: 48px;
        border-radius: 10px !important;
        border: 1px solid #b6c1d1;
        background: rgba(255,255,255,0.9);
        font-size: 15px;
        transition: all .25s ease;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #3559a8;
            box-shadow: 0 0 0 2px rgba(53,89,168,0.25);
        }

    /* ---------- SECTION HEADING ---------- */
    .section-heading {
        margin-top: 35px;
        margin-bottom: 15px;
        font-size: 22px;
        font-weight: 700;
        color: #1e3a8a;
        border-left: 5px solid #3559a8;
        padding-left: 10px;
    }

    /* ---------- TOGGLE SWITCH ---------- */
    .switch-toggle {
        width: 46px;
        height: 24px;
        appearance: none;
        background: #c9ccd1;
        border-radius: 20px;
        cursor: pointer;
        transition: .3s;
        position: relative;
    }

        .switch-toggle:checked {
            background: #3559a8;
        }

        .switch-toggle:before {
            content: "";
            width: 20px;
            height: 20px;
            background: white;
            border-radius: 50%;
            position: absolute;
            top: 2px;
            left: 2px;
            transition: .3s;
        }

        .switch-toggle:checked:before {
            transform: translateX(22px);
        }

    /* ---------- MEAL CLOSED MESSAGES ---------- */
    .meal-closed {
        font-size: 15px;
        font-weight: 600;
        color: #dc2626;
        margin-bottom: 10px;
    }

    /* ---------- GUEST CARD ---------- */
    .guest-card {
        padding: 32px;
        background: rgba(255,255,255,0.9);
        border-radius: 16px;
        border: 1px solid rgba(200,200,200,0.4);
        box-shadow: 0 8px 22px rgba(0,0,0,0.06);
        position: relative;
        transition: all .25s ease;
        margin-top: 10px;
    }

        .guest-card:hover {
            box-shadow: 0 14px 40px rgba(0,0,0,0.12);
        }

    .guest-gradient {
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 6px;
        background: linear-gradient(180deg, #3559a8, #6e6fff);
        border-radius: 4px;
    }

    .guest-item-row {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
        gap: 30px;
        flex-wrap: wrap;
    }

    .guest-label {
        width: 200px;
        font-size: 18px;
        font-weight: 600;
        color: #203254;
    }

    /* Floating input */
    .floating-input-group {
        width: 260px;
        position: relative;
    }

        .floating-input-group input {
            width: 100%;
            padding: 12px 14px;
            border-radius: 10px;
            border: 1px solid #b6c1d1;
            font-size: 15px;
            background: rgba(255,255,255,0.9);
            transition: .25s ease;
        }

        .floating-input-group label {
            position: absolute;
            top: 50%;
            left: 12px;
            transform: translateY(-50%);
            background: white;
            padding: 0 6px;
            font-size: 14px;
            color: #777;
            pointer-events: none;
            transition: .3s ease;
        }

        .floating-input-group input:focus {
            border-color: #3559a8;
            box-shadow: 0 0 0 2px rgba(53,89,168,0.25);
        }

            .floating-input-group input:focus + label,
            .floating-input-group input:not(:placeholder-shown) + label {
                top: -8px;
                font-size: 12px;
                color: #3559a8;
            }

    .qty-message {
        font-size: 13px;
        color: #3559a8;
        margin-top: 3px;
        display: none;
    }

    /* ---------- BUTTONS ---------- */
    .btn-save {
        background: #3559a8 !important;
        color: white !important;
        padding: 12px 28px;
        border-radius: 10px;
        font-size: 17px;
        font-weight: 700;
        border: none;
        transition: .3s;
        box-shadow: 0 6px 18px rgba(53, 89, 168, 0.25);
    }

        .btn-save:hover {
            background: #2d4d8f !important;
            box-shadow: 0 8px 25px rgba(53,89,168,0.35);
        }

    .btn-cancel {
        padding: 12px 28px;
        font-size: 17px;
        border-radius: 10px;
        font-weight: 700;
        background: #ffffff;
        color: #6c757d;
        border: 2px solid #6c757d;
        margin-left: 8px;
    }

        .btn-cancel:hover {
            background: #6c757d;
            color: white;
        }

</style>


<div class="container-fluid px-4 py-4">

    <h2 class="page-title">@ViewData["Title"]</h2>
    <div class="page-underline"></div>

    <div class="form-wrapper">

        <form asp-action="CreateOrEdit" method="post">
            <input type="hidden" asp-for="Id" />

            <!-- MEMBER -->
            <div class="mb-4">
                <label class="form-label">Member</label>
                <select asp-for="MemberId" asp-items="ViewBag.MemberId" class="form-select"></select>
            </div>

            <!-- MEAL DATE -->
            <div class="mb-4">
                <label class="form-label">Meal Date</label>
                <input asp-for="MealDate" type="date" class="form-control" id="MealDate" />
            </div>

            <!-- Auto-fill today date only when creating -->
            @if (Model.Id == 0)
            {
                <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        let today = new Date().toISOString().split("T")[0];
                        document.getElementById("MealDate").value = today;
                    });
                </script>
            }

            <!-- MEMBER MEALS -->
            <h4 class="section-heading">Member Meal</h4>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Breakfast</label>
                    <input asp-for="IsBreakfast" type="checkbox" class="switch-toggle meal-breakfast" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Lunch</label>
                    <input asp-for="IsLunch" type="checkbox" class="switch-toggle meal-lunch" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Dinner</label>
                    <input asp-for="IsDinner" type="checkbox" class="switch-toggle meal-dinner" />
                </div>
            </div>

            <!-- TIME LOCK MESSAGES -->
            <div id="breakfastClosedMsg" class="meal-closed" style="display:none;">
                ❌ Breakfast & Lunch ended at 7:00 AM
            </div>
            <div id="dinnerClosedMsg" class="meal-closed" style="display:none;">
                ❌ Dinner ended at 6:00 PM
            </div>

            <!-- GUEST MEALS -->
            <h4 class="section-heading">Guest Meal</h4>

            <div class="mb-3">
                <label class="form-label">Is Guest?</label>
                <select asp-for="IsGuest" class="form-select w-25" id="guestToggle">
                    <option value="false">No</option>
                    <option value="true">Yes</option>
                </select>
            </div>

            <div id="GuestSection" class="guest-card">
                <div class="guest-gradient"></div>

                <!-- BREAKFAST -->
                <div class="guest-item-row">
                    <label class="guest-label">Guest Breakfast</label>
                    <input asp-for="GuestIsBreakfast" type="checkbox" class="switch-toggle guest-breakfast" />

                    <div class="floating-input-group">
                        <input asp-for="GuestBreakfastQty" class="guest-qty guest-breakfast-qty" placeholder=" " />
                        <label>Breakfast Quantity</label>
                        <div class="qty-message guest-breakfast-msg">Add Quantity</div>
                    </div>
                </div>

                <!-- LUNCH -->
                <div class="guest-item-row">
                    <label class="guest-label">Guest Lunch</label>
                    <input asp-for="GuestIsLunch" type="checkbox" class="switch-toggle guest-lunch" />

                    <div class="floating-input-group">
                        <input asp-for="GuestLunchQty" class="guest-qty guest-lunch-qty" placeholder=" " />
                        <label>Lunch Quantity</label>
                        <div class="qty-message guest-lunch-msg">Add Quantity</div>
                    </div>
                </div>

                <!-- DINNER -->
                <div class="guest-item-row">
                    <label class="guest-label">Guest Dinner</label>
                    <input asp-for="GuestIsDinner" type="checkbox" class="switch-toggle guest-dinner" />

                    <div class="floating-input-group">
                        <input asp-for="GuestDinnerQty" class="guest-qty guest-dinner-qty" placeholder=" " />
                        <label>Dinner Quantity</label>
                        <div class="qty-message guest-dinner-msg">Add Quantity</div>
                    </div>
                </div>

            </div>

            <!-- ACTION BUTTONS -->
            <div class="mt-4">
                <button type="submit" class="btn-save">Save</button>
                <a asp-action="Index" class="btn-cancel">Cancel</a>
            </div>

        </form>

    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>

        function lockMealOptions() {
            var now = new Date();
            var hour = now.getHours();

            if (hour >= 13) {
                $(".meal-breakfast, .meal-lunch, .guest-breakfast, .guest-lunch").prop("disabled", true);
                $("#breakfastClosedMsg").fadeIn();
            }

            if (hour >= 20) {
                $(".meal-dinner, .guest-dinner").prop("disabled", true);
                $("#dinnerClosedMsg").fadeIn();
            }
        }

        function toggleGuest() {
            if ($("#guestToggle").val() === "true") {
                $("#GuestSection").slideDown();
            } else {
                $("#GuestSection").slideUp();
            }
        }

        function showGuestQty() {
            $(".guest-breakfast-qty").toggle($(".guest-breakfast").is(":checked"));
            $(".guest-lunch-qty").toggle($(".guest-lunch").is(":checked"));
            $(".guest-dinner-qty").toggle($(".guest-dinner").is(":checked"));
            updateQtyMessages();
        }

        function updateQtyMessages() {
            $(".guest-breakfast-msg").toggle($(".guest-breakfast-qty").is(":visible"));
            $(".guest-lunch-msg").toggle($(".guest-lunch-qty").is(":visible"));
            $(".guest-dinner-msg").toggle($(".guest-dinner-qty").is(":visible"));
        }

        $(document).ready(function () {
            lockMealOptions();
            toggleGuest();
            showGuestQty();

            $("#guestToggle").change(toggleGuest);
            $(".guest-breakfast, .guest-lunch, .guest-dinner").change(showGuestQty);
            $(".guest-breakfast-qty, .guest-lunch-qty, .guest-dinner-qty").on("input", updateQtyMessages);
        });

    </script>
}
