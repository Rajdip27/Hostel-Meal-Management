@using HostelMealManagement.Application.ViewModel
@using HostelMealManagement.Application.Services
@using HostelMealManagement.Infrastructure.Helper.Acls
@inject IRolePermissionService Permission
@inject ISignInHelper SignInHelper
@model IEnumerable<NormalPaymentVm>

@{
    ViewData["Title"] = "Normal Payment List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sl = 1;

    var role = SignInHelper.Roles;
    bool canEdit = Permission.CanEdit(role); // Admin & Manager = true
}

<!-- ================= PREMIUM CORPORATE THEME ================= -->
<style>
    body {
        background: #f5f7fb !important;
        font-family: "Segoe UI", sans-serif;
    }

    h2 {
        color: #1f2937;
        font-weight: 700;
        margin-bottom: 18px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #2563eb, #1e40af) !important;
        border: none !important;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 22px;
        color: #fff !important;
        box-shadow: 0 8px 20px rgba(37,99,235,0.35);
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #1e40af, #1e3a8a) !important;
            box-shadow: 0 10px 28px rgba(37,99,235,0.45);
            transform: translateY(-1px);
        }

    #paymentTable {
        background: #ffffff;
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid #e5e7eb;
        box-shadow: 0 12px 35px rgba(0,0,0,0.08);
    }

        #paymentTable thead th {
            background: linear-gradient(135deg, #1e3a8a, #2563eb) !important;
            color: #ffffff !important;
            padding: 14px;
            font-size: 14px;
            font-weight: 600;
            text-align: center;
            border: none !important;
        }

        #paymentTable td {
            vertical-align: middle !important;
            padding: 12px;
            font-size: 14px;
            color: #374151;
            text-align: center;
        }

        #paymentTable tbody tr:nth-child(even) {
            background-color: #f8fafc;
        }

        #paymentTable tbody tr:hover {
            background-color: #eef2ff;
            transition: 0.2s ease;
        }

    .btn-info {
        background: linear-gradient(135deg, #3b82f6, #2563eb) !important;
        border: none !important;
        color: #fff !important;
        border-radius: 8px;
        padding: 6px 12px;
        box-shadow: 0 6px 16px rgba(59,130,246,0.35);
        transition: 0.25s ease;
    }
</style>

<h2>@ViewData["Title"]</h2>

@if (canEdit)
{
    <p>
        <a class="btn btn-primary"
           asp-controller="NormalPayment"
           asp-action="CreateOrEdit">
            Add New Payment
        </a>
    </p>
}

<table id="paymentTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Member</th>
            <th>Meal Cycle</th>
            <th>Payment Date</th>
            <th>Amount</th>
            <th>Remarks</th>

            @if (canEdit)
            {
                <th>Actions</th>
            }
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@sl</td>
                    <td>@item.MemberName</td>
                    <td>@item.CycleId</td>
                    <td>@item.PaymentDate.ToString("dd MMM yyyy")</td>
                    <td>
                        <strong>@item.PaymentAmount.ToString("0.00")</strong>
                    </td>
                    <td>@item.Remarks</td>

                    @if (canEdit)
                    {
                        <td>
                            <a class="btn btn-sm btn-info"
                               asp-action="CreateOrEdit"
                               asp-route-id="@item.Id">
                                Edit
                            </a>

                            <form asp-action="Delete"
                                  asp-controller="NormalPayment"
                                  asp-route-id="@item.Id"
                                  method="post"
                                  style="display:inline"
                                  onsubmit="return confirm('Are you sure you want to delete this payment?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Delete
                                </button>
                            </form>
                        </td>
                    }
                </tr>

                sl++;
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">
                    No payment records found.
                </td>
            </tr>
        }
    </tbody>
</table>
