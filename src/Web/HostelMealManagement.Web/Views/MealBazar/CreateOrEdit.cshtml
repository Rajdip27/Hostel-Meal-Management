@model HostelMealManagement.Application.ViewModel.MealBazarVm

@{
    ViewData["Title"] = Model.Id > 0 ? "Edit Meal Bazar" : "Create Meal Bazar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- ================= PREMIUM CORPORATE THEME ================= -->
<style>
    body {
        background: #f5f7fb !important;
        font-family: "Segoe UI", sans-serif;
    }

    .page-title {
        color: #1f2937;
        font-weight: 700;
        margin-bottom: 6px;
    }

    .page-underline {
        width: 80px;
        height: 4px;
        background: linear-gradient(135deg, #2563eb, #1e40af);
        border-radius: 4px;
        margin-bottom: 24px;
    }

    /* ===== Form Wrapper ===== */
    .form-wrapper {
        background: #ffffff;
        border-radius: 18px;
        padding: 30px;
        border: 1px solid #e5e7eb;
        box-shadow: 0 14px 40px rgba(0,0,0,0.08);
        max-width: 900px;
    }

    /* ===== Labels ===== */
    .form-label {
        font-weight: 600;
        color: #374151;
        margin-bottom: 6px;
    }

    /* ===== Inputs ===== */
    .form-control {
        border-radius: 10px;
        padding: 10px 14px;
        border: 1px solid #d1d5db;
        font-size: 14.5px;
    }

        .form-control:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(37,99,235,0.15);
        }

    .bg-light {
        background-color: #f9fafb !important;
    }

    /* ===== Section Heading ===== */
    .section-heading {
        margin-top: 28px;
        margin-bottom: 12px;
        font-weight: 700;
        color: #1f2937;
    }

    /* ===== Table ===== */
    .table {
        background: #ffffff;
        border-radius: 14px;
        overflow: hidden;
        border: 1px solid #e5e7eb;
        box-shadow: 0 10px 28px rgba(0,0,0,0.06);
    }

        .table thead th {
            background: linear-gradient(135deg, #1e3a8a, #2563eb);
            color: #ffffff;
            font-weight: 600;
            font-size: 14px;
            padding: 12px;
            text-align: center;
            border: none;
            white-space: nowrap;
        }

        .table td {
            padding: 12px;
            font-size: 14px;
            vertical-align: middle;
        }

        .table tbody tr:hover {
            background-color: #eef2ff;
            transition: 0.2s ease;
        }

    /* ===== Buttons ===== */
    .btn-outline-primary {
        border-radius: 10px;
        padding: 6px 14px;
        font-weight: 600;
    }

    .btn-remove {
        background: linear-gradient(135deg, #ef4444, #b91c1c);
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 6px 12px;
        font-size: 13px;
        box-shadow: 0 6px 16px rgba(239,68,68,0.35);
        transition: 0.25s ease;
    }

        .btn-remove:hover {
            background: linear-gradient(135deg, #dc2626, #991b1b);
            box-shadow: 0 8px 22px rgba(239,68,68,0.45);
        }

    /* ===== Action Buttons ===== */
    .btn-save {
        background: linear-gradient(135deg, #2563eb, #1e40af);
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: 10px 26px;
        font-weight: 600;
        box-shadow: 0 8px 20px rgba(37,99,235,0.35);
        transition: 0.3s ease;
    }

        .btn-save:hover {
            background: linear-gradient(135deg, #1e40af, #1e3a8a);
            box-shadow: 0 10px 28px rgba(37,99,235,0.45);
            transform: translateY(-1px);
        }

    .btn-cancel {
        margin-left: 10px;
        color: #374151;
        text-decoration: none;
        font-weight: 600;
    }

        .btn-cancel:hover {
            color: #1f2937;
            text-decoration: underline;
        }
</style>

<div class="container-fluid px-4 py-4">

    <h2 class="page-title">@ViewData["Title"]</h2>
    <div class="page-underline"></div>

    <div class="form-wrapper">
        <form asp-action="CreateOrEdit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-4">
                <label asp-for="BazarDate" class="form-label"></label>
                <input asp-for="BazarDate" type="date" class="form-control" />
            </div>

            <div class="mb-4">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" type="date" class="form-control bg-light" readonly />
            </div>

            <div class="mb-4">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <small id="dateError" class="text-danger" style="display:none;">
                    End date must be greater than or equal to start date
                </small>
            </div>

            <div class="mb-4">
                <label asp-for="TotalDays" class="form-label"></label>
                <input asp-for="TotalDays" class="form-control bg-light" readonly />
            </div>

            <div class="mb-4">
                <label class="form-label">Member(s)</label>
                <select id="memberSelect" class="form-control">
                    <option value="">-- Select Member --</option>
                    @foreach (var item in ViewBag.Members as List<SelectListItem>)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>

                <input type="hidden" id="MemberIds" name="MemberIds" />
                <div id="selectedMembers" class="mt-2"></div>
            </div>

            <h4 class="section-heading">Bazar Items</h4>

            <table class="table table-bordered" id="itemsTable">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th width="120">Qty</th>
                        <th width="140">Price</th>
                        <th width="140">Total</th>
                        <th width="80">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Items.Count; i++)
                    {
                        <tr>
                            <td><input asp-for="Items[@i].ProductName" class="form-control" /></td>
                            <td><input asp-for="Items[@i].Quantity" class="form-control quantity" /></td>
                            <td><input asp-for="Items[@i].Price" class="form-control price" /></td>
                            <td class="item-total">0.00</td>
                            <td>
                                <button type="button" class="btn-remove remove-item">Remove</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <button type="button" class="btn btn-outline-primary btn-sm mt-3" id="addItem">
                Add Item
            </button>

            <div class="mb-4 mt-4">
                <label asp-for="BazarAmount" class="form-label"></label>
                <input asp-for="BazarAmount" class="form-control bg-light" readonly />
            </div>

            <div class="mb-4 mt-4">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control bg-light" rows="4"></textarea>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn-save">Save</button>
                <a asp-action="Index" class="btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/mealbazar.js"></script>
    <script>
        window.pageData = {
            isNew: @(Model.Id == 0 ? "true" : "false"),
            members: [
                @foreach (var id in Model.MemberIds)
                {
                        var member = (ViewBag.Members as List<SelectListItem>)
                                .FirstOrDefault(x => x.Value == id.ToString());

                        if (member != null)
                        {
                                <text>{ id: "@id", name: "@member.Text" },</text>
                        }
                }
            ]
        };
    </script>
}
