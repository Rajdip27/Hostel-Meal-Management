@model List<HostelMealManagement.Application.ViewModel.MealBazarVm>

@{
    ViewData["Title"] = "Meal Bazar List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- ================= CORPORATE GLOSSY BLUE THEME ================= -->
<style>

    body {
        background: #ffffff !important;
        font-family: "Segoe UI", sans-serif;
    }

    h2 {
        color: #1e3a8a;
        font-weight: 700;
        margin-bottom: 18px;
    }

    /* ===== Add Button (Corporate Blue) ===== */
    .btn-primary {
        background: #3559a8 !important;
        border: none !important;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 20px;
        box-shadow: 0 6px 18px rgba(53, 89, 168, 0.25);
        transition: 0.25s ease;
    }

        .btn-primary:hover {
            background: #2d4d8f !important;
            box-shadow: 0 8px 25px rgba(53, 89, 168, 0.35);
        }

    /* ===== Table Container ===== */
    .table-responsive {
        background: rgba(255, 255, 255, 0.8);
        padding: 18px;
        border-radius: 14px;
        border: 1px solid rgba(200, 200, 200, 0.4);
        box-shadow: 0 8px 25px rgba(0,0,0,0.06);
    }

    /* ===== Glossy Blue Header ===== */
    .table thead th {
        background: linear-gradient(135deg, rgba(33, 71, 155, 0.9), rgba(38, 92, 170, 0.95)) !important;
        color: #ffffff !important;
        padding: 12px;
        font-size: 15px;
        font-weight: 600;
        border: none !important;
        text-align: center;
        letter-spacing: .3px;
    }

    /* ===== Table Cells ===== */
    .table td {
        vertical-align: middle !important;
        padding: 12px;
        font-size: 15px;
        color: #2b3340;
    }

    /* ===== Meal Items List ===== */
    .table ul {
        margin: 0;
        padding-left: 20px;
    }

        .table ul li {
            color: #203254;
            font-size: 14px;
            margin-bottom: 4px;
        }

    /* ===== Edit Button ===== */
    .btn-info {
        background: #3b82f6 !important;
        border: none !important;
        color: #fff !important;
        border-radius: 8px;
        padding: 5px 10px;
        box-shadow: 0 4px 12px rgba(59,130,246,0.3);
        transition: 0.25s ease;
    }

        .btn-info:hover {
            background: #1e40af !important;
            box-shadow: 0 6px 16px rgba(59,130,246,0.4);
        }

    /* ===== Delete Button ===== */
    .btn-danger {
        background: #dc2626 !important;
        border: none !important;
        border-radius: 8px;
        padding: 5px 10px;
        color: #fff !important;
        box-shadow: 0 4px 12px rgba(220,38,38,0.3);
        transition: 0.25s ease;
    }

        .btn-danger:hover {
            background: #b91c1c !important;
            box-shadow: 0 6px 16px rgba(220,38,38,0.45);
        }

    /* ===== Action Buttons Container ===== */
    .action-buttons .btn {
        margin-right: 4px;
    }

</style>

<h2>Meal Bazar List</h2>

<a class="btn btn-primary mb-3" asp-action="CreateOrEdit">Add New Meal Bazar</a>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Total Amount</th>
                <th>Items</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bazar in Model)
            {
                <tr>
                    <td>@bazar.BazarDate.ToString("yyyy-MM-dd")</td>
                    <td>@bazar.Description</td>
                    <td><strong>@bazar.BazarAmount</strong></td>

                    <td>
                        <ul>
                            @foreach (var item in bazar.Items)
                            {
                                <li>
                                    <strong>@item.ProductName</strong> —
                                    @item.Quantity × @item.Price =
                                    <strong>@(item.Quantity* item.Price)</strong>
                                </li>
                            }
                        </ul>
                    </td>

                    <td class="action-buttons">
                        <a class="btn btn-sm btn-info"
                           asp-action="CreateOrEdit"
                           asp-route-id="@bazar.Id">
                            Edit
                        </a>

                        <form asp-action="Delete"
                              asp-route-id="@bazar.Id"
                              method="post"
                              style="display:inline;"
                              onsubmit="return confirm('Are you sure you want to delete this record?');">

                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
