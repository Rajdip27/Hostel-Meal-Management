@model List<HostelMealManagement.Application.ViewModel.MealBazarVm>

@{
    ViewData["Title"] = "Meal Bazar List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Meal Bazar List</h2>

<a class="btn btn-primary mb-2" asp-action="CreateOrEdit">Add New Meal Bazar</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Total Amount</th>
            <th>Items</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bazar in Model)
        {
            <tr>
                <td>@bazar.BazarDate.ToString("yyyy-MM-dd")</td>
                <td>@bazar.Description</td>
                <td>@bazar.BazarAmount</td>
                <td>
                    <ul>
                        @foreach (var item in bazar.Items)
                        {
                            <li>@item.ProductName - @item.Quantity × @item.Price = @(item.Quantity* item.Price)</li>
                        }
                    </ul>
                </td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="CreateOrEdit" asp-route-id="@bazar.Id">Edit</a>

                    <form asp-action="Delete" asp-route-id="@bazar.Id" method="post" style="display:inline" onsubmit="return confirm('Are you sure to delete this record?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
