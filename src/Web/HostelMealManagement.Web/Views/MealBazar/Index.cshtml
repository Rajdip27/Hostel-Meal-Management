<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Bazar Date</th>
            <th>Bazar Amount</th>
            @* <th>Items (Product - Qty)</th> *@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.BazarDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.BazarAmount</td>

                    <!-- 👇 NEW COLUMN HERE -->
                    @* <td>
                        @if (item.Items != null && item.Items.Count > 0)
                        {
                            <ul class="list-unstyled">
                                @foreach (var p in item.Items)
                                {
                                    <li>@p.ProductName (@p.Quantity)</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">No items</span>
                        }
                    </td> *@

                    <td>
                        <a asp-action="CreateOrEdit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>
