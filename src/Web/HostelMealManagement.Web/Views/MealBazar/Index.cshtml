@model List<HostelMealManagement.Application.ViewModel.MealBazarVm>

@{
    ViewData["Title"] = "Meal Bazar List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Black table header */
    .table-dark-header thead th {
        background: #000 !important;
        color: #fff !important;
        font-weight: 700;
        border-color: #000 !important;
        padding: 12px;
        font-size: 16px;
    }

    .table td {
        vertical-align: middle !important;
        padding: 12px;
        font-size: 15px;
    }

    .action-buttons .btn {
        margin-right: 4px;
    }
</style>

<h2 class="mb-3">Meal Bazar List</h2>

<a class="btn btn-primary mb-3" asp-action="CreateOrEdit">Add New Meal Bazar</a>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-dark-header">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Total Amount</th>
                <th>Items</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bazar in Model)
            {
                <tr>
                    <td>@bazar.BazarDate.ToString("yyyy-MM-dd")</td>
                    <td>@bazar.Description</td>
                    <td>@bazar.BazarAmount</td>
                    <td>
                        <ul style="padding-left:18px;">
                            @foreach (var item in bazar.Items)
                            {
                                <li>
                                    <strong>@item.ProductName</strong> —
                                    @item.Quantity × @item.Price =
                                    <strong>@(item.Quantity* item.Price)</strong>
                                </li>
                            }
                        </ul>
                    </td>
                    <td class="action-buttons">
                        <a class="btn btn-sm btn-info"
                           asp-action="CreateOrEdit"
                           asp-route-id="@bazar.Id">
                            Edit
                        </a>

                        <form asp-action="Delete"
                              asp-route-id="@bazar.Id"
                              method="post"
                              style="display:inline"
                              onsubmit="return confirm('Are you sure to delete this record?');">

                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
