@model List<HostelMealManagement.Application.ViewModel.MealBazarVm>
@using HostelMealManagement.Application.Services
@using HostelMealManagement.Infrastructure.Helper.Acls
@inject IRolePermissionService Permission
@inject ISignInHelper SignInHelper

@{
    ViewData["Title"] = "Meal Bazar List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var role = SignInHelper.Roles;
}

<!-- ================= PREMIUM CORPORATE THEME ================= -->
<style>
    body {
        background: #f5f7fb !important;
        font-family: "Segoe UI", sans-serif;
    }

    h2 {
        color: #1f2937;
        font-weight: 700;
        margin-bottom: 18px;
    }

    /* ===== Primary Button ===== */
    .btn-primary {
        background: linear-gradient(135deg, #2563eb, #1e40af) !important;
        border: none !important;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 22px;
        color: #fff !important;
        box-shadow: 0 8px 20px rgba(37,99,235,0.35);
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #1e40af, #1e3a8a) !important;
            box-shadow: 0 10px 28px rgba(37,99,235,0.45);
            transform: translateY(-1px);
        }

    /* ===== Table Wrapper ===== */
    .table {
        background: #ffffff;
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid #e5e7eb !important;
        box-shadow: 0 12px 35px rgba(0,0,0,0.08);
    }

        /* ===== Table Header ===== */
        .table thead th {
            background: linear-gradient(135deg, #1e3a8a, #2563eb) !important;
            color: #ffffff !important;
            padding: 14px;
            font-size: 15px;
            font-weight: 600;
            letter-spacing: .4px;
            text-align: center;
            border: none !important;
            white-space: nowrap;
        }

        /* ===== Table Cells ===== */
        .table td {
            padding: 14px;
            font-size: 14.5px;
            color: #374151;
            vertical-align: middle !important;
        }

        /* ===== Row Hover ===== */
        .table tbody tr:hover {
            background-color: #eef2ff;
            transition: 0.2s ease;
        }

        /* ===== Item List ===== */
        .table ul {
            margin: 0;
            padding-left: 18px;
        }

            .table ul li {
                font-size: 14px;
                margin-bottom: 4px;
                color: #1f2937;
            }

    /* ===== Action Buttons ===== */
    .btn-info {
        background: linear-gradient(135deg, #3b82f6, #2563eb) !important;
        border: none !important;
        color: #fff !important;
        border-radius: 8px;
        padding: 6px 12px;
        box-shadow: 0 6px 16px rgba(59,130,246,0.35);
        transition: 0.25s ease;
    }

        .btn-info:hover {
            background: linear-gradient(135deg, #1d4ed8, #1e40af) !important;
            box-shadow: 0 8px 22px rgba(59,130,246,0.45);
        }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444, #b91c1c) !important;
        border: none !important;
        border-radius: 8px;
        padding: 6px 12px;
        color: #fff !important;
        box-shadow: 0 6px 16px rgba(239,68,68,0.35);
        transition: 0.25s ease;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #dc2626, #991b1b) !important;
            box-shadow: 0 8px 22px rgba(239,68,68,0.45);
        }
</style>

<h2>@ViewData["Title"]</h2>

<a class="btn btn-primary mb-3" asp-action="CreateOrEdit">
    Add New Meal Bazar
</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Total Amount</th>
            <th>Items</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var bazar in Model)
        {
            <tr>
                <td>@bazar.BazarDate.ToString("yyyy-MM-dd")</td>
                <td>@bazar.Description</td>
                <td><strong>@bazar.BazarAmount</strong></td>

                <td>
                    <ul>
                        @foreach (var item in bazar.Items)
                        {
                            <li>
                                <strong>@item.ProductName</strong> —
                                @item.Quantity × @item.Price =
                                <strong>@(item.Quantity* item.Price)</strong>
                            </li>
                        }
                    </ul>
                </td>

                <td>
                    <div style="display:flex; align-items:center; gap:6px;">
                        <a class="btn btn-sm btn-info"
                           asp-action="CreateOrEdit"
                           asp-route-id="@bazar.Id">
                            Edit
                        </a>

                        @if (Permission.CanDelete(role))
                        {
                            <form asp-action="Delete"
                                  asp-route-id="@bazar.Id"
                                  method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this record?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Delete
                                </button>
                            </form>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
