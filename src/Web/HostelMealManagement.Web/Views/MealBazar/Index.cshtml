@model List<HostelMealManagement.Application.ViewModel.MealBazarVm>

@{
    ViewData["Title"] = "Meal Bazar List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- ================= PREMIUM CORPORATE THEME ================= -->
<style>

    body {
        background: #f5f7fb !important;
        font-family: "Segoe UI", sans-serif;
    }

    h2 {
        color: #1f2937;
        font-weight: 700;
        margin-bottom: 18px;
    }

    /* ===== Add Button ===== */
    .btn-primary {
        background: linear-gradient(135deg, #2563eb, #1e40af) !important;
        border: none !important;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 22px;
        box-shadow: 0 8px 20px rgba(37,99,235,0.35);
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #1e40af, #1e3a8a) !important;
            box-shadow: 0 10px 28px rgba(37,99,235,0.45);
            transform: translateY(-1px);
        }

    /* ===== Table Wrapper ===== */
    .table-responsive {
        background: #ffffff;
        padding: 20px;
        border-radius: 16px;
        border: 1px solid #e5e7eb;
        box-shadow: 0 12px 35px rgba(0,0,0,0.08);
    }

    /* ===== Table Header ===== */
    .table thead th {
        background: linear-gradient(135deg, #1e3a8a, #2563eb) !important;
        color: #ffffff !important;
        padding: 14px;
        font-size: 15px;
        font-weight: 600;
        border: none !important;
        text-align: center;
        letter-spacing: .4px;
        white-space: nowrap;
    }

    /* ===== Table Cells ===== */
    .table td {
        vertical-align: middle !important;
        padding: 14px;
        font-size: 14.5px;
        color: #374151;
    }

    /* ===== Row Hover ===== */
    .table tbody tr:hover {
        background-color: #f1f5ff;
        transition: 0.2s ease;
    }

    /* ===== Item List ===== */
    .table ul {
        margin: 0;
        padding-left: 20px;
    }

        .table ul li {
            color: #1f2937;
            font-size: 14px;
            margin-bottom: 4px;
        }

    /* ===== Edit Button ===== */
    .btn-info {
        background: linear-gradient(135deg, #3b82f6, #2563eb) !important;
        border: none !important;
        color: #fff !important;
        border-radius: 8px;
        padding: 6px 12px;
        box-shadow: 0 6px 16px rgba(59,130,246,0.35);
        transition: 0.25s ease;
    }

        .btn-info:hover {
            background: linear-gradient(135deg, #1d4ed8, #1e40af) !important;
            box-shadow: 0 8px 22px rgba(59,130,246,0.45);
        }

    /* ===== Delete Button ===== */
    .btn-danger {
        background: linear-gradient(135deg, #ef4444, #b91c1c) !important;
        border: none !important;
        border-radius: 8px;
        padding: 6px 12px;
        color: #fff !important;
        box-shadow: 0 6px 16px rgba(239,68,68,0.35);
        transition: 0.25s ease;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #dc2626, #991b1b) !important;
            box-shadow: 0 8px 22px rgba(239,68,68,0.45);
        }

    /* ===== Action Buttons ===== */
    .action-buttons .btn {
        margin-right: 6px;
    }

</style>

<h2>Meal Bazar List</h2>

<a class="btn btn-primary mb-3" asp-action="CreateOrEdit">
    Add New Meal Bazar
</a>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Total Amount</th>
                <th>Items</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bazar in Model)
            {
                <tr>
                    <td>@bazar.BazarDate.ToString("yyyy-MM-dd")</td>
                    <td>@bazar.Description</td>
                    <td><strong>@bazar.BazarAmount</strong></td>

                    <td>
                        <ul>
                            @foreach (var item in bazar.Items)
                            {
                                <li>
                                    <strong>@item.ProductName</strong> —
                                    @item.Quantity × @item.Price =
                                    <strong>@(item.Quantity* item.Price)</strong>
                                </li>
                            }
                        </ul>
                    </td>

                    <td class="action-buttons">
                        <a class="btn btn-sm btn-info"
                           asp-action="CreateOrEdit"
                           asp-route-id="@bazar.Id">
                            Edit
                        </a>

                        <form asp-action="Delete"
                              asp-route-id="@bazar.Id"
                              method="post"
                              style="display:inline;"
                              onsubmit="return confirm('Are you sure you want to delete this record?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
