@inject HostelMealManagement.Infrastructure.Helper.Acls.ISignInHelper SignInHelper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hostel Meal Management</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        /* ================= GLASSMORPHIC COLOR SYSTEM ================= */
        :root {
            --glass-bg: rgba(255, 255, 255, 0.55);
            --glass-dark: rgba(255, 255, 255, 0.35);
            --glass-border: rgba(255, 255, 255, 0.4);
            --primary-color: #2563eb;
            --accent-color: #22c55e;
            --text-color: #0f172a;
            --text-light: #ffffff;
            --shadow: 0 25px 45px rgba(0, 0, 0, 0.15);
            --transition: all 0.35s ease;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #e0e7ff, #f8fafc, #ecfeff);
            color: var(--text-color);
        }

        /* ================= SIDEBAR (GLASS) ================= */
        .hmm-sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding: 20px 0;
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-right: 1px solid var(--glass-border);
            box-shadow: var(--shadow);
            z-index: 1000;
            transition: var(--transition);
        }

        .sidebar-collapsed {
            width: 70px;
        }

            .sidebar-collapsed .hmm-sidebar-text {
                display: none;
            }

            .sidebar-collapsed h3 {
                font-size: 0;
            }

                .sidebar-collapsed h3::after {
                    content: "HMM";
                    font-size: 18px;
                    font-weight: 700;
                    color: #2563eb;
                }

        .hmm-sidebar h3 {
            text-align: center;
            margin-bottom: 30px;
            font-weight: 700;
            letter-spacing: 1px;
            color: #1e40af;
        }

        /* ================= NAV LINKS ================= */
        .hmm-nav-link {
            padding: 12px 22px;
            margin-right: 12px;
            display: flex;
            align-items: center;
            text-decoration: none;
            font-size: 15px;
            color: #1e293b;
            border-radius: 0 30px 30px 0;
            transition: var(--transition);
        }

            .hmm-nav-link i {
                margin-right: 12px;
                width: 20px;
                text-align: center;
                font-size: 16px;
                color: #2563eb;
            }

        .sidebar-collapsed .hmm-nav-link i {
            margin-right: 0;
        }

        .hmm-nav-link:hover {
            background: rgba(37, 99, 235, 0.15);
            transform: translateX(6px);
        }

        .hmm-nav-link.active {
            background: linear-gradient(135deg, rgba(37,99,235,0.25), rgba(34,197,94,0.25));
            color: #1e293b;
            box-shadow: inset 0 0 0 1px var(--glass-border);
        }

        /* ================= TOGGLE ================= */
        .sidebar-toggle {
            position: absolute;
            top: 20px;
            right: -15px;
            width: 34px;
            height: 34px;
            border-radius: 50%;
            border: 1px solid var(--glass-border);
            background: var(--glass-dark);
            backdrop-filter: blur(12px);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: var(--shadow);
            transition: var(--transition);
        }

            .sidebar-toggle i {
                color: #2563eb;
            }

            .sidebar-toggle:hover {
                transform: scale(1.15) rotate(90deg);
            }

        /* ================= MAIN CONTENT ================= */
        .hmm-main-content {
            margin-left: 250px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            transition: var(--transition);
        }

        .main-expanded {
            margin-left: 70px;
        }

        /* ================= TOPBAR (GLASS) ================= */
        .hmm-topbar {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-bottom: 1px solid var(--glass-border);
            padding: 16px 26px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: var(--shadow);
        }

        /* ================= BODY ================= */
        .hmm-body-wrapper {
            padding: 30px;
            flex-grow: 1;
        }

        /* ================= FOOTER ================= */
        .hmm-footer {
            background: var(--glass-bg);
            backdrop-filter: blur(15px);
            border-top: 1px solid var(--glass-border);
            padding: 14px;
            text-align: center;
            color: #475569;
            font-size: 0.9rem;
        }
    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <div class="hmm-sidebar" id="sidebar">
        <button class="sidebar-toggle" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>

        <h3>Fiesta Hostel</h3>

        <a href="/Dashboard" class="hmm-nav-link">
            <i class="fas fa-home"></i><span class="hmm-sidebar-text">Dashboard</span>
        </a>

        @if (User.IsInRole("Member"))
        {
            <a href="/Member" class="hmm-nav-link"><i class="fas fa-users"></i><span class="hmm-sidebar-text">Members</span></a>
            <a href="/mealbazar" class="hmm-nav-link"><i class="fas fa-shopping-cart"></i><span class="hmm-sidebar-text">Meal Bazar</span></a>
            <a href="/mealattendance" class="hmm-nav-link"><i class="fas fa-user-check"></i><span class="hmm-sidebar-text">Meal Attendance</span></a>
            <a asp-controller="MealMenu" asp-action="Index" class="hmm-nav-link"><i class="fas fa-list-alt"></i><span class="hmm-sidebar-text">Meal Menu</span></a>
            <a asp-controller="UtilityBill" asp-action="Index" class="hmm-nav-link"><i class="fas fa-file-invoice-dollar"></i><span class="hmm-sidebar-text">Utility Bill</span></a>
            <a href="/meala-bill" class="hmm-nav-link"><i class="fas fa-file-invoice"></i><span class="hmm-sidebar-text">Payment</span></a>
            <a href="/meal-bill-report" class="hmm-nav-link"><i class="fas fa-chart-line"></i><span class="hmm-sidebar-text">Reports</span></a>
        }
        else
        {
            <a href="/Member" class="hmm-nav-link"><i class="fas fa-users"></i><span class="hmm-sidebar-text">Members</span></a>
            <a href="/mealbazar" class="hmm-nav-link"><i class="fas fa-shopping-cart"></i><span class="hmm-sidebar-text">Meal Bazar</span></a>
            <a href="/mealcycle" class="hmm-nav-link"><i class="fas fa-sync-alt"></i><span class="hmm-sidebar-text">Meal Cycle</span></a>
            <a href="/mealattendance" class="hmm-nav-link"><i class="fas fa-user-check"></i><span class="hmm-sidebar-text">Meal Attendance</span></a>
            <a asp-controller="MealMenu" asp-action="Index" class="hmm-nav-link"><i class="fas fa-list-alt"></i><span class="hmm-sidebar-text">Meal Menu</span></a>
            <a asp-controller="UtilityBill" asp-action="Index" class="hmm-nav-link"><i class="fas fa-file-invoice-dollar"></i><span class="hmm-sidebar-text">Utility Bill</span></a>
            <a href="/meala-bill" class="hmm-nav-link"><i class="fas fa-file-invoice"></i><span class="hmm-sidebar-text">Meal Bill</span></a>
            <a href="#" class="hmm-nav-link"><i class="fas fa-credit-card"></i><span class="hmm-sidebar-text">Payment</span></a>
            <a href="/meal-bill-report" class="hmm-nav-link"><i class="fas fa-chart-line"></i><span class="hmm-sidebar-text">Reports</span></a>
        }

        <a asp-action="Logout" asp-controller="Account" class="hmm-nav-link">
            <i class="fas fa-sign-out-alt"></i><span class="hmm-sidebar-text">Logout</span>
        </a>
    </div>

    <!-- MAIN CONTENT -->
    <div class="hmm-main-content" id="mainContent">
        <div class="hmm-topbar">
            <strong>@ViewData["Title"]</strong>
            <div class="dropdown">
                <a class="dropdown-toggle text-decoration-none text-dark"
                   href="#"
                   role="button"
                   data-bs-toggle="dropdown"
                   aria-expanded="false">
                    <i class="fas fa-user-circle"></i> @SignInHelper.Fullname
                </a>

                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="dropdown-item" href="/Account/Profile">
                            <i class="fas fa-user me-2"></i> Profile
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="/Account/ChangePassword">
                            <i class="fas fa-key me-2"></i> Change Password
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                            <i class="fas fa-sign-out-alt me-2"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>

        </div>

        <div class="hmm-body-wrapper">
            @RenderBody()
        </div>

        <div class="hmm-footer">
            © @DateTime.Now.Year Hostel Meal Management
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');
            const toggle = document.getElementById('sidebarToggle');
            const icon = toggle.querySelector('i');

            toggle.addEventListener('click', function () {
                sidebar.classList.toggle('sidebar-collapsed');
                mainContent.classList.toggle('main-expanded');
                icon.classList.toggle('fa-bars');
                icon.classList.toggle('fa-chevron-right');
            });
                    @if (TempData["Success"] != null)
        {
                <script>
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: '@TempData["Success"]',
                        confirmButtonColor: '#2563EB'
                    });
        </script>
    }

        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>
