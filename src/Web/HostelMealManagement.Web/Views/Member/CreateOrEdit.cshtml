@using HostelMealManagement.Application.CommonModel
@using HostelMealManagement.Application.Helpers
@model HostelMealManagement.Application.ViewModel.MemberVm
@inject HostelMealManagement.Infrastructure.Helper.Acls.ISignInHelper SignInHelper

@{
    ViewData["Title"] = Model.Id > 0 ? "Edit Member" : "Create Member";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    bool isMember = SignInHelper.Roles.Contains("Member");
}

<!-- ================= EXECUTIVE PREMIUM THEME ================= -->
<style>
    body {
        background: linear-gradient(135deg, #f1f5f9, #e2e8f0) !important;
        font-family: "Segoe UI", sans-serif;
    }

    .page-title {
        font-size: 28px;
        font-weight: 800;
        color: #0f172a;
        margin-bottom: 4px;
    }

    .page-subtitle {
        font-size: 14px;
        color: #64748b;
        margin-bottom: 22px;
    }

    .page-underline {
        width: 90px;
        height: 4px;
        background: linear-gradient(135deg, #2563eb, #1e40af);
        border-radius: 4px;
        margin-bottom: 26px;
    }

    .form-wrapper {
        background: rgba(255,255,255,.95);
        padding: 36px;
        border-radius: 20px;
        border: 1px solid #e5e7eb;
        box-shadow: 0 30px 70px rgba(0,0,0,.12);
    }

    .section-title {
        font-size: 18px;
        font-weight: 700;
        color: #1e3a8a;
        margin: 32px 0 14px;
        padding-left: 10px;
        border-left: 4px solid #2563eb;
    }

    .form-label {
        font-size: 13px;
        font-weight: 600;
        color: #475569;
        margin-bottom: 6px;
    }

    .form-control,
    .form-select {
        height: 48px;
        padding: 10px 14px;
        border-radius: 12px;
        border: 1px solid #cbd5f5;
        font-size: 14px;
        transition: .25s ease;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(37,99,235,.18);
        }

    .form-check-input {
        width: 18px;
        height: 18px;
        border-radius: 4px;
        border-color: #2563eb;
    }

        .form-check-input:checked {
            background-color: #2563eb;
            border-color: #1e40af;
        }

    #imagePreview {
        margin-top: 10px;
        border-radius: 14px;
        padding: 6px;
        background: #ffffff;
        border: 1px solid #e5e7eb;
        box-shadow: 0 6px 18px rgba(0,0,0,.08);
        max-height: 150px;
    }

    .btn-save {
        background: linear-gradient(135deg, #2563eb, #1e40af);
        color: white;
        border-radius: 12px;
        padding: 12px 34px;
        font-weight: 700;
        box-shadow: 0 12px 30px rgba(37,99,235,.45);
        border: none;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 18px 45px rgba(37,99,235,.6);
        }

    .btn-cancel {
        margin-left: 12px;
        padding: 12px 34px;
        border-radius: 12px;
        font-weight: 700;
        background: transparent;
        border: 2px solid #64748b;
        color: #334155;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background: #64748b;
            color: white;
        }
</style>

<div class="container-fluid px-4 py-4">

    <h2 class="page-title">@ViewData["Title"]</h2>
    <div class="page-subtitle">Member profile & hostel record management</div>
    <div class="page-underline"></div>

    <div class="form-wrapper">

        <form asp-action="CreateOrEdit"
              asp-controller="Member"
              method="post"
              enctype="multipart/form-data"
              novalidate>

            <input type="hidden" asp-for="Id" />

            <!-- ================= PERSONAL INFO ================= -->
            <div class="section-title">Personal Information</div>
            <div class="row">

                @if (!isMember)
                {
                    <div class="col-md-6 mb-3">
                        <label asp-for="MemberCode" class="form-label"></label>
                        <input asp-for="MemberCode" class="form-control" />
                        <span asp-validation-for="MemberCode" class="text-danger"></span>
                    </div>
                }

                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="FatherName" class="form-label"></label>
                    <input asp-for="FatherName" class="form-control" />
                    <span asp-validation-for="FatherName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="MotherName" class="form-label"></label>
                    <input asp-for="MotherName" class="form-control" />
                    <span asp-validation-for="MotherName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="JoiningDate" class="form-label"></label>
                    <input asp-for="JoiningDate" type="date" class="form-control" />
                    <span asp-validation-for="JoiningDate" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="DateOfBirth" class="form-label"></label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

            </div>

            <!-- ================= CONTACT ================= -->
            <div class="section-title">Contact & Address</div>
            <div class="row">

                <div class="col-md-6 mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PermanentAddress" class="form-label"></label>
                    <input asp-for="PermanentAddress" class="form-control" />
                    <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PresentAddress" class="form-label"></label>
                    <input asp-for="PresentAddress" class="form-control" />
                    <span asp-validation-for="PresentAddress" class="text-danger"></span>
                </div>

            </div>

            <!-- ================= EMERGENCY ================= -->
            <div class="section-title">Emergency Details</div>
            <div class="row">

                <div class="col-md-6 mb-3">
                    <label asp-for="EmergencyContact" class="form-label"></label>
                    <input asp-for="EmergencyContact" class="form-control" />
                    <span asp-validation-for="EmergencyContact" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="EmergencyName" class="form-label"></label>
                    <input asp-for="EmergencyName" class="form-control" />
                    <span asp-validation-for="EmergencyName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Relationship" class="form-label"></label>
                    <input asp-for="Relationship" class="form-control" />
                    <span asp-validation-for="Relationship" class="text-danger"></span>
                </div>

            </div>

            <!-- ================= OTHER ================= -->
            <div class="section-title">Additional Information</div>
            <div class="row">

                <div class="col-md-6 mb-3">
                    <label asp-for="Religion" class="form-label"></label>
                    <select asp-for="Religion" class="form-select">
                        <option value="">Select Religion</option>
                        <option>Buddhism</option>
                        <option>Christianity</option>
                        <option>Hinduism</option>
                        <option>Islam</option>
                        <option>Jain</option>
                        <option>OtherReligions</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Gender" class="form-label"></label>
                    <select asp-for="Gender" class="form-select">
                        <option value="">Select Gender</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="MaritalStatus" class="form-label"></label><br />
                    <input asp-for="MaritalStatus" type="checkbox" class="form-check-input" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="MealStatus" class="form-label"></label><br />
                    <input asp-for="MealStatus" type="checkbox" class="form-check-input" />
                </div>

                @if (!isMember)
                {
                    <div class="col-md-6 mb-3">
                        <label asp-for="NID" class="form-label"></label>
                        <input asp-for="NID" class="form-control" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="HouseBill" class="form-label"></label>
                        <input asp-for="HouseBill" class="form-control" />
                    </div>

                  @*   <div class="col-md-4 mb-3">
                        <label asp-for="UtilityBill" class="form-label"></label>
                        <input asp-for="UtilityBill" class="form-control" />
                    </div> *@

                    <div class="col-md-4 mb-3">
                        <label asp-for="OtherBill" class="form-label"></label>
                        <input asp-for="OtherBill" class="form-control" />
                    </div>
                }

            </div>

            <!-- ================= SECURITY ================= -->
            <div class="section-title">Security & Image</div>
            <div class="row">

                <div class="col-md-6 mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="ImageFile" class="form-label"></label>
                    <input asp-for="ImageFile" type="file" class="form-control"
                           accept="image/*"
                           onchange="previewImage(event)" />
                    <img id="imagePreview"
                         src="~/@UrlHelpers.GetEventImageUrl(Model.Picture, CommonVariables.ProfileLocation)" />
                </div>

            </div>

            <div class="mt-4">
                <button type="submit" class="btn-save">Save Member</button>
                <a asp-action="Index" class="btn-cancel">Cancel</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function () {
                document.getElementById('imagePreview').src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}
