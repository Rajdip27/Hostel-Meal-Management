@using HostelMealManagement.Application.CommonModel
@using HostelMealManagement.Application.Helpers
@model HostelMealManagement.Application.ViewModel.MemberVm
@inject HostelMealManagement.Infrastructure.Helper.Acls.ISignInHelper SignInHelper

@{
    ViewData["Title"] = Model.Id > 0 ? "Edit Member" : "Create Member";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    bool isMember = SignInHelper.Roles.Contains("Member");
}

<!-- ================= PREMIUM CORPORATE THEME ================= -->
<style>
    body {
        background: #f5f7fb !important;
        font-family: "Segoe UI", sans-serif;
    }

    /* ===== Page Title ===== */
    .page-title {
        color: #1f2937;
        font-weight: 700;
        margin-bottom: 6px;
    }

    .page-underline {
        width: 80px;
        height: 4px;
        background: linear-gradient(135deg, #2563eb, #1e40af);
        border-radius: 4px;
        margin-bottom: 24px;
    }

    /* ===== Form Wrapper ===== */
    .form-wrapper {
        background: #ffffff;
        padding: 32px;
        border-radius: 18px;
        border: 1px solid #e5e7eb;
        box-shadow: 0 14px 40px rgba(0,0,0,0.08);
    }

    /* ===== Labels ===== */
    .form-label {
        font-weight: 600;
        color: #374151;
        margin-bottom: 6px;
    }

    /* ===== Inputs & Selects ===== */
    .form-control,
    .form-select {
        padding: 10px 14px;
        border-radius: 10px;
        border: 1px solid #d1d5db;
        font-size: 14.5px;
        background: #ffffff;
        color: #1f2937;
        transition: .25s ease;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(37,99,235,0.15);
        }

    /* ===== Checkbox ===== */
    .form-check-input {
        border-color: #2563eb;
    }

        .form-check-input:checked {
            background-color: #2563eb;
            border-color: #1e40af;
        }

    /* ===== Image Preview ===== */
    #imagePreview {
        border: 1px solid #e5e7eb;
        border-radius: 10px;
        padding: 4px;
        background: #ffffff;
    }

    /* ===== Password Toggle Button ===== */
    .btn-outline-secondary {
        border-radius: 10px;
        font-weight: 600;
    }

    /* ===== Action Buttons ===== */
    .btn-save {
        background: linear-gradient(135deg, #2563eb, #1e40af);
        color: #ffffff;
        border: none;
        border-radius: 10px;
        padding: 10px 26px;
        font-weight: 600;
        box-shadow: 0 8px 20px rgba(37,99,235,0.35);
        transition: .3s ease;
    }

        .btn-save:hover {
            background: linear-gradient(135deg, #1e40af, #1e3a8a);
            box-shadow: 0 10px 28px rgba(37,99,235,0.45);
            transform: translateY(-1px);
        }

    .btn-cancel {
        margin-left: 10px;
        padding: 10px 26px;
        border-radius: 10px;
        font-weight: 600;
        background: transparent;
        color: #374151;
        text-decoration: none;
    }

        .btn-cancel:hover {
            text-decoration: underline;
            color: #1f2937;
        }
</style>

<div class="container-fluid px-4 py-4">

    <h2 class="page-title">@ViewData["Title"]</h2>
    <div class="page-underline"></div>

    <div class="form-wrapper">

        <form asp-action="CreateOrEdit"
              asp-controller="Member"
              method="post"
              enctype="multipart/form-data"
              class="needs-validation"
              novalidate>

            <input type="hidden" asp-for="Id" />

            <div class="row">

                @if (!isMember)
                {
                    <div class="col-md-6 mb-3">
                        <label asp-for="MemberCode" class="form-label"></label>
                        <input asp-for="MemberCode" class="form-control" />
                        <span asp-validation-for="MemberCode" class="text-danger"></span>
                    </div>
                }

                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="FatherName" class="form-label"></label>
                    <input asp-for="FatherName" class="form-control" />
                    <span asp-validation-for="FatherName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="MotherName" class="form-label"></label>
                    <input asp-for="MotherName" class="form-control" />
                    <span asp-validation-for="MotherName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PermanentAddress" class="form-label"></label>
                    <input asp-for="PermanentAddress" class="form-control" />
                    <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PresentAddress" class="form-label"></label>
                    <input asp-for="PresentAddress" class="form-control" />
                    <span asp-validation-for="PresentAddress" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="JoiningDate" class="form-label"></label>
                    <input asp-for="JoiningDate" type="date" class="form-control" />
                    <span asp-validation-for="JoiningDate" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="DateOfBirth" class="form-label"></label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="EmergencyContact" class="form-label"></label>
                    <input asp-for="EmergencyContact" class="form-control" />
                    <span asp-validation-for="EmergencyContact" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="EmergencyName" class="form-label"></label>
                    <input asp-for="EmergencyName" class="form-control" />
                    <span asp-validation-for="EmergencyName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Relationship" class="form-label"></label>
                    <input asp-for="Relationship" class="form-control" />
                    <span asp-validation-for="Relationship" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Religion" class="form-label"></label>
                    <select asp-for="Religion" class="form-select">
                        <option value="">Select Religion</option>
                        <option>Buddhism</option>
                        <option>Christianity</option>
                        <option>Hinduism</option>
                        <option>Islam</option>
                        <option>Jain</option>
                        <option>OtherReligions</option>
                    </select>
                    <span asp-validation-for="Religion" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Gender" class="form-label"></label>
                    <select asp-for="Gender" class="form-select">
                        <option value="">Select Gender</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="MaritalStatus" class="form-label"></label><br />
                    <input asp-for="MaritalStatus" type="checkbox" class="form-check-input" />
                </div>

                @if (!isMember)
                {
                    <div class="col-md-6 mb-3">
                        <label asp-for="NID" class="form-label"></label>
                        <input asp-for="NID" class="form-control" />
                        <span asp-validation-for="NID" class="text-danger"></span>
                    </div>
                }

                <div class="col-md-6 mb-3">
                    <label asp-for="MealStatus" class="form-label"></label><br />
                    <input asp-for="MealStatus" type="checkbox" class="form-check-input" />
                </div>

                @if (!isMember)
                {
                    <div class="col-md-4 mb-3">
                        <label asp-for="HouseBill" class="form-label"></label>
                        <input asp-for="HouseBill" class="form-control" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="UtilityBill" class="form-label"></label>
                        <input asp-for="UtilityBill" class="form-control" />
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="OtherBill" class="form-label"></label>
                        <input asp-for="OtherBill" class="form-control" />
                    </div>
                }

                <div class="col-md-6 mb-3">
                    <label asp-for="ImageFile" class="form-label"></label>
                    <input asp-for="ImageFile" type="file" class="form-control"
                           accept="image/*"
                           onchange="previewImage(event)" />
                    <img id="imagePreview"
                         src="~/@UrlHelpers.GetEventImageUrl(Model.Picture, CommonVariables.ProfileLocation)"
                         class="img-thumbnail mt-2"
                         style="max-height:150px;" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="Password" type="password" class="form-control" id="Password" />
                        <button type="button"
                                class="btn btn-outline-secondary"
                                onclick="togglePassword()">
                            Show
                        </button>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn-save">Save</button>
            <a asp-action="Index" class="btn-cancel">Cancel</a>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function () {
                document.getElementById('imagePreview').src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }

        function togglePassword() {
            const passwordInput = document.getElementById('Password');
            const btn = event.currentTarget;

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                btn.textContent = 'Hide';
            } else {
                passwordInput.type = 'password';
                btn.textContent = 'Show';
            }
        }
    </script>
}
