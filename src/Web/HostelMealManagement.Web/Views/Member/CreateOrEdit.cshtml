@using HostelMealManagement.Application.CommonModel
@using HostelMealManagement.Application.Helpers
@model HostelMealManagement.Application.ViewModel.MemberVm
@inject HostelMealManagement.Infrastructure.Helper.Acls.ISignInHelper SignInHelper

@{
    ViewData["Title"] = Model.Id > 0 ? "Edit Member" : "Create Member";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    bool isMember = SignInHelper.Roles.Contains("Member");
}

<style>
    /* ===== Page Background ===== */
    body {
        background-color: #ffffff !important;
    }

    /* ===== Form Container ===== */
    form {
        background-color: rgba(255, 255, 255, 0.7);
        border-color: rgba(180, 180, 180, 0.35);
    }

    /* ===== Page Title ===== */
    h2 {
        color: #1e3a8a;
    }

    /* ===== Labels ===== */
    .form-label {
        color: #22344d;
    }

    /* ===== Inputs & Select ===== */
    .form-control,
    .form-select {
        background-color: rgba(255,255,255,0.85);
        border-color: #b6c1d1;
        color: #1f2937;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #3559a8;
        }

    /* ===== Checkbox ===== */
    .form-check-input {
        border-color: #3559a8;
    }

        .form-check-input:checked {
            background-color: #3559a8;
            border-color: #1e3a8a;
        }

    /* ===== Image Preview ===== */
    #imagePreview {
        border-color: #d0d6e1;
    }

    /* ===== Password Toggle Button ===== */
    .btn-outline-secondary {
        background-color: transparent;
        color: #6b7280;
        border-color: #a7b0b9;
    }

        .btn-outline-secondary:hover {
            background-color: #3559a8;
            color: #ffffff !important;
            border-color: #3559a8;
        }

    /* ===== Save Button ===== */
    .btn-save {
        background-color: #3559a8 !important;
        color: #ffffff !important;
    }

        .btn-save:hover {
            background-color: #2d4d8f !important;
        }

        .btn-save:active {
            background-color: #263f78 !important;
        }

    /* ===== Cancel Button ===== */
    .btn-cancel {
        background-color: #ffffff !important;
        color: #6c757d !important;
        border-color: #6c757d !important;
    }

        .btn-cancel:hover {
            background-color: #6c757d !important;
            color: #ffffff !important;
        }

        .btn-cancel:active {
            background-color: #4f5458 !important;
        }
</style>

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateOrEdit"
      asp-controller="Member"
      method="post"
      enctype="multipart/form-data"
      class="needs-validation"
      novalidate>

    <input type="hidden" asp-for="Id" />

    <div class="row">

        @if (!isMember)
        {
            <div class="col-md-6 mb-3">
                <label asp-for="MemberCode" class="form-label"></label>
                <input asp-for="MemberCode" class="form-control" />
                <span asp-validation-for="MemberCode" class="text-danger"></span>
            </div>
        }

        <div class="col-md-6 mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="FatherName" class="form-label"></label>
            <input asp-for="FatherName" class="form-control" />
            <span asp-validation-for="FatherName" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="MotherName" class="form-label"></label>
            <input asp-for="MotherName" class="form-control" />
            <span asp-validation-for="MotherName" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="PermanentAddress" class="form-label"></label>
            <input asp-for="PermanentAddress" class="form-control" />
            <span asp-validation-for="PermanentAddress" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="PresentAddress" class="form-label"></label>
            <input asp-for="PresentAddress" class="form-control" />
            <span asp-validation-for="PresentAddress" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="JoiningDate" class="form-label"></label>
            <input asp-for="JoiningDate" type="date" class="form-control" />
            <span asp-validation-for="JoiningDate" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="DateOfBirth" class="form-label"></label>
            <input asp-for="DateOfBirth" type="date" class="form-control" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="EmergencyContact" class="form-label"></label>
            <input asp-for="EmergencyContact" class="form-control" />
            <span asp-validation-for="EmergencyContact" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="EmergencyName" class="form-label"></label>
            <input asp-for="EmergencyName" class="form-control" />
            <span asp-validation-for="EmergencyName" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Relationship" class="form-label"></label>
            <input asp-for="Relationship" class="form-control" />
            <span asp-validation-for="Relationship" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Religion" class="form-label"></label>
            <select asp-for="Religion" class="form-select">
                <option value="">Select Religion</option>
                <option>Buddhism</option>
                <option>Christianity</option>
                <option>Hinduism</option>
                <option>Islam</option>
                <option>Jain</option>
                <option>OtherReligions</option>
            </select>
            <span asp-validation-for="Religion" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Gender" class="form-label"></label>
            <select asp-for="Gender" class="form-select">
                <option value="">Select Gender</option>
                <option>Male</option>
                <option>Female</option>
                <option>Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="MaritalStatus" class="form-label"></label><br />
            <input asp-for="MaritalStatus" type="checkbox" class="form-check-input" />
        </div>

        @if (!isMember)
        {
            <div class="col-md-6 mb-3">
                <label asp-for="NID" class="form-label"></label>
                <input asp-for="NID" class="form-control" />
                <span asp-validation-for="NID" class="text-danger"></span>
            </div>
        }

        <div class="col-md-6 mb-3">
            <label asp-for="MealStatus" class="form-label"></label><br />
            <input asp-for="MealStatus" type="checkbox" class="form-check-input" />
        </div>

        @if (!isMember)
        {
            <div class="col-md-4 mb-3">
                <label asp-for="HouseBill" class="form-label"></label>
                <input asp-for="HouseBill" class="form-control" />
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="UtilityBill" class="form-label"></label>
                <input asp-for="UtilityBill" class="form-control" />
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="OtherBill" class="form-label"></label>
                <input asp-for="OtherBill" class="form-control" />
            </div>
        }

        <div class="col-md-6 mb-3">
            <label asp-for="ImageFile" class="form-label"></label>
            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(event)" />
            <img id="imagePreview"
                 src="~/@UrlHelpers.GetEventImageUrl(Model.Picture, CommonVariables.ProfileLocation)"
                 class="img-thumbnail mt-2"
                 style="max-height:150px;" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Password" class="form-label"></label>
            <div class="input-group">
                <input asp-for="Password" type="password" class="form-control" id="Password" />
                <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">Show</button>
            </div>
        </div>
    </div>

    <button type="submit" class="btn-save">Save</button>
    <a asp-action="Index" class="btn-cancel">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function () {
                document.getElementById('imagePreview').src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }

        function togglePassword() {
            const passwordInput = document.getElementById('Password');
            const btn = event.currentTarget;

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                btn.textContent = 'Hide';
            } else {
                passwordInput.type = 'password';
                btn.textContent = 'Show';
            }
        }
    </script>
}
