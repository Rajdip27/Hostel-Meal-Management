@using HostelMealManagement.Application.CommonModel
@using HostelMealManagement.Application.Helpers
@model HostelMealManagement.Application.ViewModel.MemberVm
@inject HostelMealManagement.Infrastructure.Helper.Acls.ISignInHelper SignInHelper

@{
    ViewData["Title"] = Model.Id > 0 ? "Edit Member" : "Create Member";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    bool isMember = SignInHelper.Roles.Contains("Member");
}


<style>

    body {
        background: #ffffff !important;
        font-family: "Segoe UI", sans-serif;
    }

    /* ======== FORM CONTAINER ======== */
    form {
        background: rgba(255, 255, 255, 0.7);
        padding: 25px 25px 35px 25px;
        border-radius: 16px;
        border: 1px solid rgba(180, 180, 180, 0.35);
        box-shadow: 0 8px 25px rgba(0,0,0,0.06);
    }

    h2 {
        font-weight: 700;
        color: #1e3a8a;
        margin-bottom: 18px;
    }

    /* ======== LABELS ======== */
    .form-label {
        font-weight: 600;
        color: #22344d;
    }

    /* ======== INPUT FIELDS ======== */
    .form-control, .form-select {
        height: 48px;
        border-radius: 10px;
        border: 1px solid #b6c1d1;
        background: rgba(255,255,255,0.85);
        transition: .25s ease;
        font-size: 15px;
    }

        .form-control:focus, .form-select:focus {
            border-color: #3559a8;
            box-shadow: 0 0 0 2px rgba(53,89,168,0.25);
        }

    /* ======== CHECKBOX STYLE ======== */
    .form-check-input {
        width: 20px;
        height: 20px;
        border-radius: 4px;
        cursor: pointer;
        border: 2px solid #3559a8;
    }

        .form-check-input:checked {
            background-color: #3559a8;
            border-color: #1e3a8a;
        }

    /* ======== IMAGE PREVIEW ======== */
    #imagePreview {
        border-radius: 8px;
        box-shadow: 0 4px 14px rgba(0,0,0,0.15);
        border: 1px solid #d0d6e1;
    }

    /* ======== PASSWORD BUTTON ======== */
    .btn-outline-secondary {
        border-radius: 10px !important;
        border-color: #a7b0b9 !important;
    }

        .btn-outline-secondary:hover {
            background: #3559a8;
            color: #fff !important;
            border-color: #3559a8 !important;
        }

    /* ================== BUTTON: SAVE ================== */
    .btn-save {
        background: #3559a8 !important;
        color: white !important;
        border: none !important;
        padding: 10px 28px;
        font-size: 17px;
        font-weight: 600;
        border-radius: 10px;
        transition: 0.25s ease;
        box-shadow: 0 6px 18px rgba(53, 89, 168, 0.25);
    }

        .btn-save:hover {
            background: #2d4d8f !important;
            box-shadow: 0 8px 25px rgba(53, 89, 168, 0.35);
        }

        .btn-save:active {
            background: #263f78 !important;
            transform: scale(0.97);
        }

    /* ================== BUTTON: CANCEL ================== */
    .btn-cancel {
        background: white !important;
        color: #6c757d !important;
        border: 2px solid #6c757d !important;
        padding: 10px 26px;
        font-size: 17px;
        font-weight: 600;
        border-radius: 10px;
        margin-left: 10px;
        transition: 0.25s ease-in-out;
    }

        .btn-cancel:hover {
            background: #6c757d !important;
            color: white !important;
        }

        .btn-cancel:active {
            background: #4f5458 !important;
            transform: scale(0.97);
        }

</style>


<h2>@ViewData["Title"]</h2>

<form asp-action="CreateOrEdit" asp-controller="Member" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />
    <div class="row">

        @if (!isMember)
        {
            <div class="col-md-6 mb-3">
                <label asp-for="MemberCode" class="form-label"></label>
                <input asp-for="MemberCode" class="form-control" />
                <span asp-validation-for="MemberCode" class="text-danger"></span>
            </div>
        }

        <div class="col-md-6 mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="FatherName" class="form-label"></label>
            <input asp-for="FatherName" class="form-control" />
            <span asp-validation-for="FatherName" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="MotherName" class="form-label"></label>
            <input asp-for="MotherName" class="form-control" />
            <span asp-validation-for="MotherName" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="PermanentAddress" class="form-label"></label>
            <input asp-for="PermanentAddress" class="form-control" />
            <span asp-validation-for="PermanentAddress" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="PresentAddress" class="form-label"></label>
            <input asp-for="PresentAddress" class="form-control" />
            <span asp-validation-for="PresentAddress" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="JoiningDate" class="form-label"></label>
            <input asp-for="JoiningDate" class="form-control" type="date" />
            <span asp-validation-for="JoiningDate" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="DateOfBirth" class="form-label"></label>
            <input asp-for="DateOfBirth" class="form-control" type="date" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="EmergencyContact" class="form-label"></label>
            <input asp-for="EmergencyContact" class="form-control" />
            <span asp-validation-for="EmergencyContact" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="EmergencyName" class="form-label"></label>
            <input asp-for="EmergencyName" class="form-control" />
            <span asp-validation-for="EmergencyName" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Relationship" class="form-label"></label>
            <input asp-for="Relationship" class="form-control" />
            <span asp-validation-for="Relationship" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Religion" class="form-label"></label>
            <select asp-for="Religion" class="form-select">
                <option value="">Select Religion</option>
                <option value="Buddhism">Buddhism</option>
                <option value="Christianity">Christianity</option>
                <option value="Hinduism">Hinduism</option>
                <option value="Islam">Islam</option>
                <option value="Jain">Jain</option>
                <option value="OtherReligions">Other Religions</option>
            </select>
            <span asp-validation-for="Religion" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Gender" class="form-label"></label>
            <select asp-for="Gender" class="form-select">
                <option value="">Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="MaritalStatus" class="form-label"></label><br />
            <input asp-for="MaritalStatus" type="checkbox" class="form-check-input" />
        </div>

        @if (!isMember)
        {
            <div class="col-md-6 mb-3">
                <label asp-for="NID" class="form-label"></label>
                <input asp-for="NID" class="form-control" />
                <span asp-validation-for="NID" class="text-danger"></span>
            </div>
        }

        <div class="col-md-6 mb-3">
            <label asp-for="MealStatus" class="form-label"></label><br />
            <input asp-for="MealStatus" type="checkbox" class="form-check-input" />
        </div>

        @if (!isMember)
        {
            <div class="col-md-4 mb-3">
                <label asp-for="HouseBill" class="form-label"></label>
                <input asp-for="HouseBill" class="form-control" />
                <span asp-validation-for="HouseBill" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="UtilityBill" class="form-label"></label>
                <input asp-for="UtilityBill" class="form-control" />
                <span asp-validation-for="UtilityBill" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="OtherBill" class="form-label"></label>
                <input asp-for="OtherBill" class="form-control" />
                <span asp-validation-for="OtherBill" class="text-danger"></span>
            </div>
        }

        <div class="col-md-6 mb-3">
            <label asp-for="ImageFile" class="form-label"></label>
            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(event)" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>

            <img id="imagePreview" src="~/@UrlHelpers.GetEventImageUrl(Model.Picture, CommonVariables.ProfileLocation)"
                 class="img-thumbnail mt-2" style="max-height:150px;" />
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Password" class="form-label"></label>
            <div class="input-group">
                <input asp-for="Password" type="password" class="form-control" id="Password" />
                <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">Show</button>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <!-- BUTTONS -->
    <button type="submit" class="btn-save">Save</button>
    <a asp-action="Index" class="btn-cancel">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function () {
                document.getElementById('imagePreview').src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }

        function togglePassword() {
            const passwordInput = document.getElementById('Password');
            const btn = event.currentTarget;

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                btn.textContent = 'Hide';
            } else {
                passwordInput.type = 'password';
                btn.textContent = 'Show';
            }
        }
    </script>
}
