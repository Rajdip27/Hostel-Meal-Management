@using HostelMealManagement.Application.ViewModel
@inject HostelMealManagement.Infrastructure.Helper.Acls.ISignInHelper SignInHelper
@model IEnumerable<MemberVm>

@{
    ViewData["Title"] = "Members List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    bool isMember = SignInHelper.Roles.Contains("Member");
}

<!-- ================= PREMIUM CORPORATE THEME ================= -->
<style>
    body {
        background: #f5f7fb !important;
        font-family: "Segoe UI", sans-serif;
    }

    h2.page-title {
        color: #1f2937;
        font-weight: 700;
        margin-bottom: 18px;
    }

    /* ===== Primary Button ===== */
    .btn-primary {
        background: linear-gradient(135deg, #2563eb, #1e40af) !important;
        border: none !important;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 22px;
        color: #fff !important;
        box-shadow: 0 8px 20px rgba(37,99,235,0.35);
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #1e40af, #1e3a8a) !important;
            box-shadow: 0 10px 28px rgba(37,99,235,0.45);
            transform: translateY(-1px);
        }

    /* ===== Table Wrapper ===== */
    .table-responsive {
        background: #ffffff;
        padding: 20px;
        border-radius: 16px;
        border: 1px solid #e5e7eb;
        box-shadow: 0 12px 35px rgba(0,0,0,0.08);
    }

    /* ===== Table Header ===== */
    .table thead th {
        background: linear-gradient(135deg, #1e3a8a, #2563eb) !important;
        color: #ffffff !important;
        padding: 14px;
        font-size: 15px;
        font-weight: 600;
        border: none !important;
        text-align: center;
        letter-spacing: .4px;
        white-space: nowrap;
    }

    /* ===== Table Cells ===== */
    .table td {
        vertical-align: middle !important;
        padding: 14px;
        font-size: 14.5px;
        color: #374151;
    }

    /* ===== Row Hover ===== */
    .table tbody tr:hover {
        background-color: #f1f5ff;
        transition: 0.2s ease;
    }

    /* ===== Status Badges ===== */
    .badge.bg-success {
        background-color: #16a34a !important;
        padding: 6px 10px;
        border-radius: 6px;
        font-size: 13px;
    }

    .badge.bg-secondary {
        background-color: #6b7280 !important;
        padding: 6px 10px;
        border-radius: 6px;
        font-size: 13px;
    }

    /* ===== Edit Button ===== */
    .btn-info {
        background: linear-gradient(135deg, #3b82f6, #2563eb) !important;
        border: none !important;
        color: #fff !important;
        border-radius: 8px;
        padding: 6px 12px;
        box-shadow: 0 6px 16px rgba(59,130,246,0.35);
        transition: 0.25s ease;
    }

        .btn-info:hover {
            background: linear-gradient(135deg, #1d4ed8, #1e40af) !important;
            box-shadow: 0 8px 22px rgba(59,130,246,0.45);
        }

    /* ===== Delete Button ===== */
    .btn-danger {
        background: linear-gradient(135deg, #ef4444, #b91c1c) !important;
        border: none !important;
        border-radius: 8px;
        padding: 6px 12px;
        color: #fff !important;
        box-shadow: 0 6px 16px rgba(239,68,68,0.35);
        transition: 0.25s ease;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #dc2626, #991b1b) !important;
            box-shadow: 0 8px 22px rgba(239,68,68,0.45);
        }

    .btn-group .btn {
        margin-right: 4px;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="page-title">@ViewData["Title"]</h2>

    @if (!isMember)
    {
        <a class="btn btn-primary"
           asp-controller="Member"
           asp-action="CreateOrEdit">
            <i class="fa fa-plus"></i> Add New Member
        </a>
    }
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Member Code</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Joining Date</th>
                <th>Date of Birth</th>
                <th>Meal Status</th>
                <th style="width:150px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>@member.MemberCode</td>
                    <td><strong>@member.Name</strong></td>
                    <td>@member.PhoneNumber</td>
                    <td>@member.Email</td>
                    <td>@member.JoiningDate.ToString("yyyy-MM-dd")</td>
                    <td>@member.DateOfBirth.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (member.MealStatus)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <a class="btn btn-info"
                               asp-action="CreateOrEdit"
                               asp-route-id="@member.Id">
                                Edit
                            </a>

                            <form asp-action="Delete"
                                  asp-route-id="@member.Id"
                                  method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this member?');">
                                <button type="submit"
                                        class="btn btn-danger">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
