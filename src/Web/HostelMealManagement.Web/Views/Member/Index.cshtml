@using HostelMealManagement.Application.ViewModel
@inject HostelMealManagement.Infrastructure.Helper.Acls.ISignInHelper SignInHelper
@model IEnumerable<MemberVm>

@{
    ViewData["Title"] = "Members List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    bool isMember = SignInHelper.Roles.Contains("Member");
}

<h2>@ViewData["Title"]</h2>

@if (!isMember)
{
    <p>
        <a class="btn btn-primary" asp-controller="Member" asp-action="CreateOrEdit">Add New Member</a>
    </p>
}

<!-- GRADIENT DARK BLUE TABLE HEADER -->
<style>
    .custom-header th {
        background: linear-gradient(135deg, #1E3A8A, #0F172A) !important; /* gradient dark blue */
        color: #ffffff !important;
        font-weight: bold;
        text-align: center;
        padding: 12px;
        border-color: #0F172A !important;
    }
</style>

<table class="table table-striped table-bordered">
    <thead class="custom-header">
        <tr>
            <th>Member Code</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Joining Date</th>
            <th>Date of Birth</th>
            <th>Meal Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.MemberCode</td>
                <td>@member.Name</td>
                <td>@member.PhoneNumber</td>
                <td>@member.Email</td>
                <td>@member.JoiningDate.ToString("yyyy-MM-dd")</td>
                <td>@member.DateOfBirth.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (member.MealStatus)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-info"
                       asp-action="CreateOrEdit"
                       asp-route-id="@member.Id">
                        Edit
                    </a>

                    <form asp-action="Delete"
                          asp-route-id="@member.Id"
                          method="post"
                          style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this member?');">

                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
