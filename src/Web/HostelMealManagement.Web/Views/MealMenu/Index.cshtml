@using HostelMealManagement.Application.ViewModel
@using HostelMealManagement.Application.Services
@using HostelMealManagement.Infrastructure.Helper.Acls
@inject IRolePermissionService Permission
@inject ISignInHelper SignInHelper
@model IEnumerable<MealMenuVm>

@{
    ViewData["Title"] = "Meal Menu List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sl = 1;
    var role = SignInHelper.Roles;
}

<!-- ================= PREMIUM CORPORATE THEME ================= -->
<style>
    body {
        background: #f5f7fb !important;
        font-family: "Segoe UI", sans-serif;
    }

    h2 {
        color: #1f2937;
        font-weight: 700;
        margin-bottom: 18px;
    }

    /* ===== Primary Button ===== */
    .btn-primary {
        background: linear-gradient(135deg, #2563eb, #1e40af) !important;
        border: none !important;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 22px;
        color: #fff !important;
        box-shadow: 0 8px 20px rgba(37,99,235,0.35);
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #1e40af, #1e3a8a) !important;
            box-shadow: 0 10px 28px rgba(37,99,235,0.45);
            transform: translateY(-1px);
        }

    /* ===== Table Wrapper ===== */
    #menuTable {
        background: #ffffff;
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid #e5e7eb;
        box-shadow: 0 12px 35px rgba(0,0,0,0.08);
    }

        /* ===== Table Header ===== */
        #menuTable thead th {
            background: linear-gradient(135deg, #1e3a8a, #2563eb) !important;
            color: #ffffff !important;
            padding: 14px;
            font-size: 14px;
            font-weight: 600;
            text-align: center;
            border: none !important;
            letter-spacing: .4px;
            white-space: nowrap;
        }

        /* ===== Table Cells ===== */
        #menuTable td {
            vertical-align: middle !important;
            padding: 12px;
            font-size: 14px;
            color: #374151;
        }

        /* ===== Zebra + Hover ===== */
        #menuTable tbody tr:nth-child(even) {
            background-color: #f8fafc;
        }

        #menuTable tbody tr:hover {
            background-color: #eef2ff;
            transition: 0.2s ease;
        }

    /* ===== Action Buttons ===== */
    .btn-info {
        background: linear-gradient(135deg, #0AD3EF, #25E4EB) !important;
        border: none !important;
        color: #fff !important;
        border-radius: 8px;
        padding: 6px 12px;
        font-size: 13px;
        font-weight: 600;
        box-shadow: 0 6px 16px rgba(59,130,246,0.35);
        transition: 0.25s ease;
    }

        .btn-info:hover {
            background: linear-gradient(135deg, #1d4ed8, #1e40af) !important;
            box-shadow: 0 8px 22px rgba(59,130,246,0.45);
        }

    .btn-warning {
        background: linear-gradient(135deg, #f59e0b, #d97706) !important;
        border: none !important;
        color: #fff !important;
        border-radius: 8px;
        padding: 6px 12px;
        font-size: 13px;
        font-weight: 600;
        box-shadow: 0 6px 16px rgba(245,158,11,0.35);
        transition: 0.25s ease;
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #d97706, #b45309) !important;
            box-shadow: 0 8px 22px rgba(245,158,11,0.45);
        }

    /* ===== Actions column spacing ===== */
    #menuTable td form,
    #menuTable td a {
        margin-right: 6px;
        display: inline-block;
    }
</style>

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary"
       asp-controller="MealMenu"
       asp-action="CreateOrEdit">
        Add New Meal Menu
    </a>
</p>

<table id="menuTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Day</th>
            <th>Breakfast</th>
            <th>Lunch</th>
            <th>Dinner</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @{
            var groupedMenus = Model.GroupBy(x => x.DayOfWeek).OrderBy(x => x.Key);
        }

        @foreach (var dayGroup in groupedMenus)
        {
            var breakfast = dayGroup.FirstOrDefault(x => x.MealName == "Breakfast");
            var lunch = dayGroup.FirstOrDefault(x => x.MealName == "Lunch");
            var dinner = dayGroup.FirstOrDefault(x => x.MealName == "Dinner");

            <tr>
                <td>@sl</td>
                <td><strong>@dayGroup.Key</strong></td>
                <td>@breakfast?.MenuItems</td>
                <td>@lunch?.MenuItems</td>
                <td>@dinner?.MenuItems</td>

                <td>
                    <!-- BREAKFAST -->
                    @if (breakfast != null)
                    {
                        if (!breakfast.IsActive)
                        {
                            <form asp-action="Unlock" asp-route-id="@breakfast.Id"
                                  method="post" style="display:inline"
                                  onsubmit="return confirm('Unlock Breakfast?');">
                                <button class="btn btn-sm btn-warning">Unlock B</button>
                            </form>
                        }
                        else if (Permission.CanEdit(role))
                        {
                            <a class="btn btn-sm btn-info"
                               asp-action="CreateOrEdit"
                               asp-route-id="@breakfast.Id">
                                Edit B
                            </a>
                        }
                    }

                    <!-- LUNCH -->
                    @if (lunch != null)
                    {
                        if (!lunch.IsActive)
                        {
                            <form asp-action="Unlock" asp-route-id="@lunch.Id"
                                  method="post" style="display:inline"
                                  onsubmit="return confirm('Unlock Lunch?');">
                                <button class="btn btn-sm btn-warning">Unlock L</button>
                            </form>
                        }
                        else if (Permission.CanEdit(role))
                        {
                            <a class="btn btn-sm btn-info"
                               asp-action="CreateOrEdit"
                               asp-route-id="@lunch.Id">
                                Edit L
                            </a>
                        }
                    }

                    <!-- DINNER -->
                    @if (dinner != null)
                    {
                        if (!dinner.IsActive)
                        {
                            <form asp-action="Unlock" asp-route-id="@dinner.Id"
                                  method="post" style="display:inline"
                                  onsubmit="return confirm('Unlock Dinner?');">
                                <button class="btn btn-sm btn-warning">Unlock D</button>
                            </form>
                        }
                        else if (Permission.CanEdit(role))
                        {
                            <a class="btn btn-sm btn-info"
                               asp-action="CreateOrEdit"
                               asp-route-id="@dinner.Id">
                                Edit D
                            </a>
                        }
                    }
                </td>
            </tr>

            sl++;
        }
    </tbody>
</table>
