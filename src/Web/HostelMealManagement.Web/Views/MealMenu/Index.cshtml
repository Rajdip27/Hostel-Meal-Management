@using HostelMealManagement.Application.ViewModel
@using HostelMealManagement.Application.Services
@using HostelMealManagement.Infrastructure.Helper.Acls
@inject IRolePermissionService Permission
@inject ISignInHelper SignInHelper
@model IEnumerable<MealMenuVm>

@{
    ViewData["Title"] = "Meal Menu List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sl = 1;
    var role = SignInHelper.Roles;
}

<!-- ================= CORPORATE GLOSSY BLUE THEME ================= -->
<style>
    body {
        background: #ffffff !important;
        font-family: "Segoe UI", sans-serif;
    }

    h2 {
        color: #1e3a8a;
        font-weight: 700;
        margin-bottom: 18px;
    }

    .btn-primary {
        background: #3559a8 !important;
        border: none !important;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 20px;
        box-shadow: 0 6px 18px rgba(53, 89, 168, 0.25);
        transition: 0.25s ease;
    }

        .btn-primary:hover {
            background: #2d4d8f !important;
            box-shadow: 0 8px 25px rgba(53, 89, 168, 0.35);
        }

    .table {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #d7dce3 !important;
        box-shadow: 0 8px 25px rgba(0,0,0,0.06);
    }

        .table thead th {
            background: linear-gradient(135deg, rgba(33, 71, 155, 0.9), rgba(38, 92, 170, 0.95)) !important;
            color: #ffffff !important;
            padding: 12px;
            font-size: 15px;
            font-weight: 600;
            text-align: center;
            border: none !important;
        }

        .table td {
            padding: 12px;
            font-size: 15px;
            color: #2b3340;
            vertical-align: middle !important;
        }

    .btn-info {
        background: #3b82f6 !important;
        border: none !important;
        border-radius: 8px;
        padding: 5px 12px;
        font-weight: 600;
        color: #fff !important;
    }

    .btn-danger {
        background: #dc2626 !important;
        border: none !important;
        border-radius: 8px;
        padding: 5px 12px;
        font-weight: 600;
        color: #fff !important;
    }
</style>

<h2>@ViewData["Title"]</h2>


    <p>
        <a class="btn btn-primary" asp-controller="mealmenu" asp-action="createoredit">Add New</a>
    </p>


<!-- ========== FILTER BAR ========== -->
<div class="row mb-3">
    <div class="col-md-3">
        <select id="filterDay" class="form-control select2">
            <option value="">Filter by Day</option>
            @foreach (DayOfWeek day in Enum.GetValues(typeof(DayOfWeek)))
            {
                <option value="@day">@day</option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <select id="filterMeal" class="form-control select2">
            <option value="">Filter by Meal</option>
            <option value="Breakfast">Breakfast</option>
            <option value="Lunch">Lunch</option>
            <option value="Dinner">Dinner</option>
        </select>
    </div>

    <div class="col-md-3">
        <div class="input-group">
            <input type="text" id="searchBox" class="form-control" placeholder="Search menu items..." />
            <button type="button" id="searchBtn" class="btn btn-secondary">
                Search
            </button>
        </div>
    </div>

    <div class="col-md-3">
        <button id="resetFilters" type="button" class="btn btn-secondary w-100">Reset Filters</button>
    </div>
</div>

<!-- ========== TABLE ========== -->
<table id="menuTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Day of Week</th>
            <th>Meal Name</th>
            <th>Menu Items</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var menu in Model)
        {
            <tr>
                <td>@sl</td>
                <td>@menu.DayOfWeek</td>
                <td>@menu.MealName</td>
                <td>@menu.MenuItems</td>
                <td>@(menu.IsActive ? "Yes" : "No")</td>
                <td class="action-buttons">

    @if (Permission.CanEdit(role))
                    {
                        <a class="btn btn-sm btn-info" asp-action="CreateOrEdit" asp-route-id="@menu.Id">Edit</a>
                    }
                    @if (Permission.CanDelete(role))
                    {
                        <form asp-action="Delete" asp-route-id="@menu.Id" method="post" style="display:inline"
                              onsubmit="return confirm('Are you sure?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    }

                   
                </td>
            </tr>
            sl++;
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {

            $('.select2').select2({ width: "100%", theme: "classic" });

            var table = $('#menuTable').DataTable({ pageLength: 10 });

            // Live search on keyup (kept as you had)
            $("#searchBox").keyup(function () {
                table.search(this.value).draw();
            });

            // NEW: Search button triggers same logic
            $("#searchBtn").click(function () {
                var val = $("#searchBox").val();
                table.search(val).draw();
            });

            $("#filterDay").change(function () {
                table.column(1).search(this.value).draw();
            });

            $("#filterMeal").change(function () {
                table.column(2).search(this.value).draw();
            });

            $("#resetFilters").click(function () {
                $("#filterDay").val("").trigger("change");
                $("#filterMeal").val("").trigger("change");
                $("#searchBox").val("");
                table.search("").columns().search("").draw();
            });
        });
    </script>
}
