@model HostelMealManagement.Application.ViewModel.Auth.LoginViewModel
@{
    ViewData["Title"] = "Login - Hostel Meal Management";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>

        /* ===== Startup Intro Screen ===== */
        #intro-screen {
            position: fixed;
            inset: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #1e3a8a, #3b82f6);
            color: white;
            font-size: 28px;
            font-weight: 600;
            z-index: 9999;
            opacity: 1;
            transition: opacity 1s ease;
        }

        /* ===== Page Background ===== */
        body {
            margin: 0;
            padding: 20px;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Segoe UI", sans-serif;
            background: linear-gradient(135deg, #eef0f4, #dfe2e6);
        }

        /* ===== Glass Login Card ===== */
        .login-card {
            width: 100%;
            max-width: 420px;
            background: rgba(40, 90, 180, 0.35);
            backdrop-filter: blur(18px);
            -webkit-backdrop-filter: blur(18px);
            border-radius: 18px;
            border: 1px solid rgba(255, 255, 255, 0.35);
            box-shadow: 0 18px 45px rgba(40, 90, 180, 0.35), inset 0 0 50px rgba(255, 255, 255, 0.15);
            transform: translateY(40px);
            opacity: 0;
            transition: 0.8s ease;
        }

        .card-header {
            background: linear-gradient(135deg, rgba(33,71,155,.85), rgba(38,92,170,.9));
            text-align: center;
            padding: 2rem 2rem 1.6rem;
            color: white;
        }

        .logo-circle {
            width: 64px;
            height: 64px;
            border-radius: 50%;
            background: rgba(255,255,255,0.28);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 12px;
        }

        .card-body {
            padding: 1.8rem;
        }

        .form-control {
            height: 48px;
            border-radius: 10px;
            background: rgba(255,255,255,0.85);
        }

        .btn-login {
            background: #3559a8;
            border-radius: 10px;
            height: 48px;
            color: white;
        }

    </style>
</head>

<body>

    <!-- ======================================== -->
    <!--        ENHANCED INTRO SCREEN             -->
    <!-- ======================================== -->
    <div id="intro-screen">

        <div id="intro-content" style="text-align:center; padding:20px; opacity:0;">

            <!-- Logo -->
            <div id="intro-logo" style="
                width:90px;
                height:90px;
                border-radius:50%;
                background:rgba(255,255,255,0.25);
                display:flex;
                align-items:center;
                justify-content:center;
                margin:0 auto 15px auto;
                transform:scale(0.6);
            ">
                <i class="fas fa-utensils" style="font-size:36px; color:white;"></i>
            </div>

            <!-- Title -->
            <div id="intro-title" style="font-size:32px; font-weight:700; margin-bottom:10px; opacity:0;">
                Hostel Meal Management
            </div>

            <div id="intro-sub" style="font-size:18px; opacity:0; margin-bottom:20px;">
                Smart • Fast • Efficient Meal Tracking
            </div>

            <!-- Feature list -->
            <div id="intro-features" style="opacity:0; font-size:15px; line-height:1.6;">
                <div><i class="fas fa-check-circle"></i> Daily Meal Records</div>
                <div><i class="fas fa-check-circle"></i> Auto Meal Bill Calculation</div>
                <div><i class="fas fa-check-circle"></i> Bazar & Expense Tracking</div>
                <div><i class="fas fa-check-circle"></i> Member Profile System</div>
                <div><i class="fas fa-check-circle"></i> Secure Access Control</div>
            </div>

            <div id="intro-tagline" style="margin-top:22px; opacity:0; font-size:14px;">
                Empowering Hostels with Smart Technology
            </div>

        </div>

    </div>



    <!-- ======================================== -->
    <!--              LOGIN CARD                  -->
    <!-- ======================================== -->
    <div class="login-card" id="login-card">
        <div class="card-header">
            <div class="logo-circle">
                <i class="fas fa-utensils"></i>
            </div>
            <h4 class="fw-bold mb-0">Hostel Meal</h4>
            <p class="small opacity-75 mb-0">Login to continue</p>
        </div>

        <div class="card-body">
            <form asp-action="Login" asp-controller="Account" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Email -->
                <label asp-for="Email" class="mb-1">Email</label>
                <input asp-for="Email" class="form-control mb-1" placeholder="Enter your email" />

                <!-- Password -->
                <label asp-for="Password" class="mb-1">Password</label>
                <input asp-for="Password" type="password" class="form-control mb-1" placeholder="Enter your password" />

                <button type="submit" class="btn btn-login w-100 mt-3">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                </button>

            </form>
        </div>
    </div>


    <!-- ======================================== -->
    <!-- ANIMATION SCRIPT (NO KEYFRAMES USED)     -->
    <!-- ======================================== -->
    <script>
        window.onload = function () {

            const intro = document.getElementById("intro-screen");
            const logo = document.getElementById("intro-logo");
            const content = document.getElementById("intro-content");
            const title = document.getElementById("intro-title");
            const sub = document.getElementById("intro-sub");
            const features = document.getElementById("intro-features");
            const tagline = document.getElementById("intro-tagline");
            const card = document.getElementById("login-card");

            // Fade in intro content
            setTimeout(() => content.style.opacity = "1", 300);

            // Logo scale animation
            setTimeout(() => {
                logo.style.transition = "0.6s ease";
                logo.style.transform = "scale(1)";
            }, 500);

            // Fade in title
            setTimeout(() => {
                title.style.transition = "0.6s ease";
                title.style.opacity = "1";
            }, 800);

            // Fade subtitle
            setTimeout(() => {
                sub.style.transition = "0.6s ease";
                sub.style.opacity = "1";
            }, 1000);

            // Fade features list
            setTimeout(() => {
                features.style.transition = "0.6s ease";
                features.style.opacity = "1";
            }, 1200);

            // Fade tagline
            setTimeout(() => {
                tagline.style.transition = "0.6s ease";
                tagline.style.opacity = "1";
            }, 1400);

            // Remove intro and show login card
            setTimeout(() => {
                intro.style.opacity = "0";

                setTimeout(() => {
                    intro.style.display = "none";
                    card.style.opacity = "1";
                    card.style.transform = "translateY(0)";
                }, 900);

            }, 2800);
        };
    </script>


    <!-- Validation Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
