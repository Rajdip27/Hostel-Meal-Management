@model HostelMealManagement.Application.ViewModel.Auth.LoginViewModel
@{
    ViewData["Title"] = "Login - Hostel Meal Management";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>

        /* ===== Startup Intro Screen ===== */
        #intro-screen {
            position: fixed;
            inset: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #1e3a8a, #3b82f6);
            color: white;
            font-size: 28px;
            font-weight: 600;
            z-index: 9999;
            opacity: 1;
            transition: opacity 0.9s ease;
        }

        /* ===== Minimal Corporate Background ===== */
        body {
            margin: 0;
            padding: 20px;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Segoe UI", sans-serif;
            background: linear-gradient(135deg, #eef0f4, #dfe2e6);
        }

        /* ===== Glossy Blue Glass Login Card ===== */
        .login-card {
            width: 100%;
            max-width: 420px;
            /* Glossy blue glass effect */
            background: rgba(40, 90, 180, 0.35);
            backdrop-filter: blur(18px);
            -webkit-backdrop-filter: blur(18px);
            border-radius: 18px;
            border: 1px solid rgba(255, 255, 255, 0.35);
            box-shadow: 0 18px 45px rgba(40, 90, 180, 0.35), inset 0 0 50px rgba(255, 255, 255, 0.15);
            transform: translateY(40px);
            opacity: 0;
            transition: 0.8s ease;
            padding-bottom: 5px;
            overflow: hidden;
        }

        /* ===== Card Header ===== */
        .card-header {
            background: linear-gradient(135deg, rgba(33, 71, 155, 0.85), rgba(38, 92, 170, 0.9));
            padding: 2rem 2rem 1.6rem;
            text-align: center;
            color: white;
            border-bottom: 1px solid rgba(255, 255, 255, 0.25);
        }

        .logo-circle {
            width: 64px;
            height: 64px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.28);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 12px;
            font-size: 28px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.18), 0 0 20px rgba(255, 255, 255, 0.35);
        }

        /* ===== Card Body ===== */
        .card-body {
            padding: 1.8rem;
        }

        /* ===== Labels & Inputs ===== */
        label {
            font-weight: 600;
            color: #203254;
            font-size: 0.9rem;
        }

        .form-control {
            height: 48px;
            border-radius: 10px;
            border: 1px solid #b6c1d1;
            background: rgba(255, 255, 255, 0.85);
            transition: 0.25s ease;
        }

            .form-control:focus {
                border-color: #3559a8;
                box-shadow: 0 0 0 2px rgba(53, 89, 168, 0.25);
            }

        /* ===== Button ===== */
        .btn-login {
            background: #3559a8;
            border: none;
            height: 48px;
            border-radius: 10px;
            font-size: 16px;
            color: white;
            font-weight: 600;
            box-shadow: 0 6px 20px rgba(53, 89, 168, 0.25);
            transition: 0.25s ease;
        }

            .btn-login:hover {
                background: #2d4d8f;
                box-shadow: 0 8px 25px rgba(53, 89, 168, 0.35);
            }

            .btn-login:active {
                background: #263f78;
                transform: scale(0.97);
            }

        /* ===== Footer ===== */
        .login-footer {
            font-size: 13px;
            color: #6c757d;
            text-align: center;
            margin-top: 1rem;
        }

    </style>
</head>

<body>

    <!-- Intro Screen -->
    <div id="intro-screen">Welcome to Hostel Meal Management</div>

    <!-- LOGIN CARD -->
    <div class="login-card" id="login-card">
        <div class="card-header">
            <div class="logo-circle">
                <i class="fas fa-utensils"></i>
            </div>

            <h4 class="fw-bold mb-0">Hostel Meal</h4>
            <p class="small opacity-75 mb-0">Login to continue</p>
        </div>

        <div class="card-body">
            <form asp-action="Login" asp-controller="Account" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Email -->
                <label asp-for="Email" class="mb-1">Email</label>
                <input asp-for="Email" class="form-control mb-1" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small mb-3 d-block"></span>

                <!-- Password -->
                <label asp-for="Password" class="mb-1">Password</label>
                <input asp-for="Password" type="password" class="form-control mb-1" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small mb-3 d-block"></span>

                <button type="submit" class="btn btn-login w-100 mt-2">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                </button>

                <div class="login-footer mt-4">
                    &copy; @DateTime.Now.Year Hostel Meal Management
                </div>

            </form>
        </div>
    </div>

    <!-- JavaScript for intro screen timing -->
    <script>
        window.onload = function () {

            setTimeout(() => {
                const intro = document.getElementById("intro-screen");
                const card = document.getElementById("login-card");

                intro.style.opacity = "0";

                setTimeout(() => {
                    intro.style.display = "none";
                    card.style.opacity = "1";
                    card.style.transform = "translateY(0)";
                }, 900);

            }, 2000); // Intro stays 2 seconds
        }
    </script>

    <!-- Validation Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
