@model HostelMealManagement.Application.ViewModel.Auth.LoginViewModel
@{
    ViewData["Title"] = "Login - Hostel Meal Management";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            background: linear-gradient(135deg, #4C6EF5 0%, #7950F2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Segoe UI", sans-serif;
            padding: 20px;
        }

        /* Card */
        .login-card {
            width: 100%;
            max-width: 420px;
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(10px);
            border-radius: 18px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            overflow: hidden;
            animation: fadeIn 0.6s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Header */
        .card-header {
            background: linear-gradient(135deg, #4C6EF5, #7950F2);
            padding: 2rem;
            text-align: center;
            color: white;
        }

        .logo-circle {
            width: 68px;
            height: 68px;
            border-radius: 50%;
            background: rgba(255,255,255,0.2);
            margin: 0 auto 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
        }

        /* Inputs */
        .form-control {
            height: 48px;
            border-radius: 10px;
            border: 1px solid #ced4da;
        }

            .form-control:focus {
                border-color: #4C6EF5;
                box-shadow: 0 0 5px rgba(76,110,245,0.4);
            }

        /* Button */
        .btn-login {
            background: #4C6EF5;
            border: none;
            height: 48px;
            border-radius: 10px;
            font-size: 16px;
            color: white;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-login:hover {
                background: #3b5bdb;
                box-shadow: 0 6px 20px rgba(76,110,245,0.4);
            }

        .feature-box {
            padding: 10px;
            background: #f1f3f5;
            border-radius: 10px;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .feature-box i {
                color: #4C6EF5;
            }

        .login-footer {
            font-size: 13px;
            color: #6c757d;
            text-align: center;
            margin-top: 15px;
        }
    </style>
</head>

<body>

    <div class="login-card">
        <div class="card-header">
            <div class="logo-circle">
                <i class="fas fa-utensils"></i>
            </div>
            <h4 class="fw-bold mb-0">Hostel Meal</h4>
            <p class="small opacity-75">Login to continue</p>
        </div>

        <div class="card-body p-4">

            <form asp-action="Login" asp-controller="Account" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Email -->
                <label asp-for="Email" class="fw-semibold mb-1">Email</label>
                <input asp-for="Email" class="form-control mb-1" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small mb-3 d-block"></span>

                <!-- Password -->
                <label asp-for="Password" class="fw-semibold mb-1">Password</label>
                <input asp-for="Password" type="password" class="form-control mb-1" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small mb-3 d-block"></span>

                <button type="submit" class="btn btn-login w-100 mt-2">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                </button>

                @* <div class="mt-4">
                    <div class="feature-box mb-2"><i class="fas fa-calendar-check"></i> Meal Scheduling</div>
                    <div class="feature-box mb-2"><i class="fas fa-chart-line"></i> Usage Reports</div>
                    <div class="feature-box mb-2"><i class="fas fa-bell"></i> Alerts & Notifications</div>
                    <div class="feature-box"><i class="fas fa-wallet"></i> Smart Billing</div>
                </div> *@

                <div class="login-footer mt-4">
                    &copy; @DateTime.Now.Year Hostel Meal Management
                </div>
            </form>

        </div>
    </div>

    <!-- Validation Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
