@model HostelMealManagement.Application.ViewModel.Auth.LoginViewModel
@{
    ViewData["Title"] = "Login - Hostel Meal Management";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <style>

        /* ================= GLOBAL BACKGROUND ================= */
        body {
            margin: 0;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Segoe UI", sans-serif;
            background: radial-gradient(circle at top left, #6366f1, #1e3a8a, #020617);
            overflow: hidden;
        }

            /* ================= FLOATING GLOW ================= */
            body::before {
                content: "";
                position: absolute;
                width: 600px;
                height: 600px;
                background: radial-gradient(circle, rgba(99,102,241,.45), transparent 70%);
                top: -150px;
                left: -150px;
                filter: blur(40px);
            }

            body::after {
                content: "";
                position: absolute;
                width: 500px;
                height: 500px;
                background: radial-gradient(circle, rgba(56,189,248,.35), transparent 70%);
                bottom: -150px;
                right: -150px;
                filter: blur(50px);
            }

        /* ================= INTRO SCREEN ================= */
        #intro-screen {
            position: fixed;
            inset: 0;
            background: linear-gradient(135deg, #020617, #1e3a8a);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            color: white;
            transition: opacity 1s ease;
        }

        #intro-box {
            text-align: center;
            max-width: 520px;
            opacity: 0;
            transform: scale(.85);
            transition: .8s ease;
        }

        .intro-logo {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            background: linear-gradient(135deg, #6366f1, #38bdf8);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: auto;
            box-shadow: 0 0 40px rgba(99,102,241,.8);
        }

            .intro-logo i {
                font-size: 38px;
            }

        .intro-title {
            font-size: 34px;
            font-weight: 800;
            margin-top: 20px;
        }

        .intro-sub {
            font-size: 18px;
            opacity: .85;
            margin-top: 10px;
        }

        .intro-features {
            margin-top: 25px;
            text-align: left;
            font-size: 15px;
            line-height: 1.8;
        }

            .intro-features i {
                color: #38bdf8;
                margin-right: 8px;
            }

        /* ================= LOGIN CARD ================= */
        .login-card {
            width: 100%;
            max-width: 430px;
            background: rgba(255,255,255,.12);
            backdrop-filter: blur(22px);
            border-radius: 22px;
            border: 1px solid rgba(255,255,255,.25);
            box-shadow: 0 30px 80px rgba(0,0,0,.6);
            opacity: 0;
            transform: translateY(60px);
            transition: .9s ease;
            z-index: 10;
        }

        .login-header {
            text-align: center;
            padding: 30px 20px 20px;
            color: white;
        }

            .login-header h4 {
                font-weight: 700;
            }

        .login-body {
            padding: 25px;
        }

        .form-control {
            height: 50px;
            border-radius: 12px;
            border: none;
            background: rgba(255,255,255,.9);
        }

        .btn-login {
            height: 50px;
            border-radius: 12px;
            background: linear-gradient(135deg, #6366f1, #38bdf8);
            border: none;
            font-weight: 700;
            color: white;
            box-shadow: 0 10px 30px rgba(56,189,248,.6);
            transition: .3s;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 15px 45px rgba(99,102,241,.9);
            }

        .form-check-label {
            font-size: 14px;
            cursor: pointer;
        }

        a.text-info:hover {
            text-decoration: underline;
        }

    </style>
</head>

<body>

    <!-- ================= INTRO ================= -->
    <div id="intro-screen">
        <div id="intro-box">
            <div class="intro-logo">
                <i class="fas fa-utensils"></i>
            </div>

            <div class="intro-title">Hostel Meal Management</div>
            <div class="intro-sub">Smart. Secure. Automated Hostel Dining</div>

            <div class="intro-features">
                <div><i class="fas fa-check-circle"></i> Daily Meal Attendance Tracking</div>
                <div><i class="fas fa-check-circle"></i> Automatic Monthly Bill Calculation</div>
                <div><i class="fas fa-check-circle"></i> Bazar & Utility Expense Control</div>
                <div><i class="fas fa-check-circle"></i> Member & Role Based Access</div>
                <div><i class="fas fa-check-circle"></i> Admin & Manager Control Panel</div>
            </div>
        </div>
    </div>

    <!-- ================= LOGIN CARD ================= -->
    <div class="login-card" id="loginCard">
        <div class="login-header">
            <h4>Welcome Back</h4>
            <p class="opacity-75 mb-0">Login to manage hostel meals</p>
        </div>

        <div class="login-body">
            <form asp-action="Login" asp-controller="Account" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <label class="text-white mb-1">Email</label>
                <input asp-for="Email" class="form-control mb-3" placeholder="Enter your email" />

                <label class="text-white mb-1">Password</label>
                <input asp-for="Password" type="password" class="form-control mb-3" placeholder="Enter your password" />

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe">
                        <label class="form-check-label text-white" for="rememberMe">
                            Remember me
                        </label>
                    </div>

                    <a asp-action="ForgotPassword"
                       asp-controller="Account"
                       class="text-decoration-none text-info fw-semibold">
                        Forgot password?
                    </a>
                </div>


                <button type="submit" class="btn btn-login w-100">
                    <i class="fas fa-arrow-right-to-bracket me-2"></i>Login Securely
                </button>

            </form>
        </div>
    </div>

    <!-- ================= SCRIPT ================= -->
    <script>
        window.onload = function () {

            const intro = document.getElementById("intro-screen");
            const introBox = document.getElementById("intro-box");
            const card = document.getElementById("loginCard");

            setTimeout(() => {
                introBox.style.opacity = "1";
                introBox.style.transform = "scale(1)";
            }, 400);

            setTimeout(() => {
                intro.style.opacity = "0";

                setTimeout(() => {
                    intro.style.display = "none";
                    card.style.opacity = "1";
                    card.style.transform = "translateY(0)";
                }, 900);

            }, 2800);
        };
    </script>

    <!-- Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
