@model HostelMealManagement.Application.ViewModel.Auth.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="modal fade show" tabindex="-1" aria-modal="true" role="dialog" style="display:block;">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content shadow-lg border-0 rounded-4">

            <!-- Header -->
            <div class="modal-header bg-primary text-white rounded-top-4">
                <h5 class="modal-title fw-semibold">
                    <i class="fas fa-lock me-2"></i> Change Password
                </h5>
                <a href="javascript:history.back()" class="btn-close btn-close-white"></a>
            </div>

            <!-- Form -->
            <form asp-action="ChangePassword" method="post">
                @Html.AntiForgeryToken()

                <div class="modal-body px-4 py-4 bg-light">

                    <div class="mb-3">
                        <label class="form-label fw-medium">Current Password</label>
                        <input asp-for="CurrentPassword" type="password" class="form-control form-control-lg" />
                        <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">New Password</label>
                        <input asp-for="NewPassword" type="password" class="form-control form-control-lg" />
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                </div>

                <!-- Footer -->
                <div class="modal-footer bg-white rounded-bottom-4">
                    <a href="javascript:history.back()" class="btn btn-outline-secondary px-4">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-1"></i> Update Password
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @* ❌ ERROR MESSAGE *@
    @if (TempData["Error"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Password Change Failed',
                text: '@TempData["Error"]',
                confirmButtonColor: '#dc2626'
            });
        </script>
    }
}
