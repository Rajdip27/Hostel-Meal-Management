@using HostelMealManagement.Core.Entities
@model IEnumerable<MealBill>

@{
    Layout = null;
    var issueDate = DateTime.Now.ToString("dd MMM yyyy");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Meal Bill Statement</title>

    <style>
        body {
            font-family: "Segoe UI", Arial, sans-serif;
            background: #ffffff;
            padding: 30px;
            color: #000;
        }

        /* ================= HEADER ================= */
        .pdf-header {
            text-align: center;
            margin-bottom: 25px;
            border-bottom: 2px solid #000;
            padding-bottom: 12px;
        }

            .pdf-header h2 {
                margin: 0;
                font-size: 22px;
                font-weight: 700;
                letter-spacing: .5px;
            }

            .pdf-header p {
                margin: 6px 0 0;
                font-size: 13px;
            }

        /* ================= TABLE ================= */
        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 13px;
        }

        thead th {
            border: 1px solid #000;
            padding: 8px;
            font-weight: 700;
            text-align: center;
            background: #f5f5f5;
        }

        tbody td {
            border: 1px solid #000;
            padding: 8px;
            text-align: center;
        }

        /* ================= EMPHASIS ================= */
        .text-bold {
            font-weight: 700;
        }

        .amount {
            text-align: right;
            padding-right: 10px;
        }

        /* ================= FOOTER ================= */
        .pdf-footer {
            margin-top: 25px;
            font-size: 12px;
            display: flex;
            justify-content: space-between;
        }

        .signature {
            margin-top: 40px;
            border-top: 1px solid #000;
            width: 180px;
            text-align: center;
            padding-top: 6px;
        }
    </style>
</head>

<body>

    <!-- ================= HEADER ================= -->
    <div class="pdf-header">
        <h2>Fiesta Hostel</h2>
        <p><strong>Meal Bill Statement</strong></p>
        <p>Issue Date: @issueDate</p>
    </div>

    <!-- ================= DATA TABLE ================= -->
    <table>
        <thead>
            <tr>
                <th>Member Name</th>
                <th>Card No</th>
                <th>Total Bazar</th>
                <th>Member Meal</th>
                <th>Guest Meal</th>
                <th>Total Meal</th>
                <th>Meal Rate</th>
                <th>Meal Amount</th>
                <th>House Bill</th>
                <th>Utility Bill</th>
                <th>Other Bill</th>
                <th>Total Payable</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bill in Model)
            {
                <tr>
                    <td class="text-bold">@bill.Member.Name</td>
                    <td>@bill.Member.MemberCode</td>
                    <td class="amount">@bill.TotalBazar</td>
                    <td>@bill.TotalMemberMeal</td>
                    <td>@bill.TotalGuestMeal</td>
                    <td>@bill.TotalMeal</td>
                    <td class="amount">@bill.MealRate</td>
                    <td class="amount text-bold">@bill.MealAmount</td>
                    <td class="amount">@bill.HouseBill</td>
                    <td class="amount">@bill.UtilityBill</td>
                    <td class="amount">@bill.OtherBill</td>
                    <td class="amount text-bold">@bill.TotalPayable</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- ================= FOOTER ================= -->
    <div class="pdf-footer">
        

        <div class="signature">
            Authorized Signature
        </div>
    </div>

</body>
</html>
