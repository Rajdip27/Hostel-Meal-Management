@using HostelMealManagement.Core.Entities
@model IEnumerable<MealBill>

@{
    Layout = null;
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #ffffff;
        margin: 0;
        padding: 20px;
        color: #333;
    }

    .bill-container {
        max-width: 800px;
        margin: 0 auto 40px auto;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        page-break-after: always;
    }

        /* 🔴 Prevent extra blank page */
        .bill-container:last-child {
            page-break-after: auto;
        }

    .header {
        background-color: #1f3a5f;
        color: white;
        padding: 28px;
        text-align: center;
    }

        .header h1 {
            margin: 0;
            font-size: 26px;
            letter-spacing: 1px;
        }

        .header p {
            margin: 6px 0 0;
            font-size: 14px;
            opacity: 0.9;
        }

    .content {
        padding: 30px;
    }

    .section {
        margin-bottom: 25px;
    }

        .section h2 {
            border-bottom: 2px solid #1f3a5f;
            padding-bottom: 6px;
            font-size: 18px;
            color: #1f3a5f;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        font-size: 14px;
    }

    th {
        background-color: #f1f5f9;
        color: #1f3a5f;
        width: 40%;
    }

    .total-row {
        font-weight: bold;
        font-size: 16px;
        background-color: #e6f2ff;
    }

    .notes {
        background-color: #f8f9fa;
        padding: 14px;
        border-radius: 8px;
        font-size: 13px;
        line-height: 1.6;
    }

    .footer {
        text-align: center;
        padding: 18px;
        background-color: #1f3a5f;
        color: white;
        font-size: 13px;
    }
</style>

@foreach (var bill in Model)
{
    <div class="bill-container">
        <div class="header">
            <h1>HOSTEL MEAL BILL</h1>
            <p>Fiesta Hostel</p>
            <p>Generated on: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
        </div>

        <div class="content">

            <div class="section">
                <h2>Bill Period</h2>
                <table>
                    <tr><th>Meal Cycle</th><td>@bill.MealCycle.StartDate.ToString("MMMM yyyy")</td></tr>
                    <tr>
                        <th>Period</th>
                        <td>
                            @bill.MealCycle.StartDate.ToString("dd MMM yyyy")
                            -
                            @bill.MealCycle.EndDate.ToString("dd MMM yyyy")
                        </td>
                    </tr>
                </table>
            </div>

            <div class="section">
                <h2>Member Details</h2>
                <table>
                    <tr><th>Member Name</th><td>@bill.Member.Name</td></tr>
                    <tr><th>Member ID</th><td>@bill.Member.MemberCode</td></tr>
                </table>
            </div>

            <div class="section">
                <h2>Meal Summary</h2>
                <table>
                    <tr><th>Total Bazar Costs</th><td>৳ @bill.TotalBazar</td></tr>
                    <tr><th>Member Meals</th><td>@bill.TotalMemberMeal</td></tr>
                    <tr><th>Guest Meals</th><td>@bill.TotalGuestMeal</td></tr>
                    <tr><th>Total Meals</th><td>@bill.TotalMeal</td></tr>
                    <tr><th>Meal Rate</th><td>৳ @bill.MealRate</td></tr>
                    <tr><th>Your Meal Amount</th><td>৳ @bill.MealAmount</td></tr>
                </table>
            </div>

            <div class="section">
                <h2>Other Bills</h2>
                <table>
                    <tr><th>House / Rent Bill</th><td>৳ @bill.HouseBill</td></tr>
                    <tr><th>Utility Bill</th><td>৳ @bill.UtilityBill</td></tr>
                    <tr><th>Other Bill</th><td>৳ @bill.OtherBill</td></tr>
                </table>
            </div>

            <div class="section">
                <table>
                    <tr class="total-row">
                        <th>Total Payable Amount</th>
                        <td>৳ @bill.TotalPayable</td>
                    </tr>
                </table>
            </div>

            <div class="notes">
                <strong>Notes:</strong><br />
                • Meal rate = Total Bazar ÷ Total Meals<br />
                • Guest meals included in shared calculation<br />
                • Please pay within due date<br />
                • Contact hostel management for any issues
            </div>

        </div>

        <div class="footer">
            Thank you for staying with us! | Signature: ________________________
        </div>
    </div>
}

<script>
    // 🔥 AUTO DOWNLOAD PDF (NO PRINT)
    window.onload = function () {
        const link = document.createElement('a');
        link.href = window.location.href;
        link.download = 'MealBillReport.pdf';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
    };
</script>
