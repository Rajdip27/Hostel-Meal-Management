@using HostelMealManagement.Core.Entities
@model IEnumerable<MealBill>
@{
    Layout = null;
}
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f6f9;
        margin: 0;
        padding: 20px;
        color: #333;
    }

    .bill-container {
        max-width: 800px;
        margin: 0 auto 40px auto;
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        page-break-inside: avoid; /* Prevent splitting across pages */
        break-inside: avoid; /* Modern browsers */
    }

    .header {
        background: linear-gradient(135deg, #2c3e50, #3498db);
        color: white;
        padding: 30px;
        text-align: center;
    }

        .header h1 {
            margin: 0;
            font-size: 28px;
        }

        .header p {
            margin: 5px 0 0;
            font-size: 16px;
            opacity: 0.9;
        }

    .content {
        padding: 30px;
    }

    .section {
        margin-bottom: 30px;
    }

        .section h2 {
            border-bottom: 2px solid #3498db;
            padding-bottom: 8px;
            font-size: 20px;
            color: #2c3e50;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f8f9fa;
        color: #2c3e50;
        width: 40%;
    }

    .total-row {
        font-weight: bold;
        font-size: 18px;
        background-color: #e8f4fd !important;
    }

    .notes {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        font-size: 14px;
        line-height: 1.6;
    }

    .footer {
        text-align: center;
        padding: 20px;
        background-color: #2c3e50;
        color: white;
        font-size: 14px;
    }

    /* Print-specific styles */
    @@media print {
        body {
            background: white;
            padding: 0;
        }

        .bill-container {
            box-shadow: none;
            page-break-inside: avoid;
            break-inside: avoid;
        }

        .content, .section, table, th, td {
            padding: 6px; /* Reduce padding for print */
            font-size: 12pt; /* Slightly smaller font */
        }

        .header {
            padding: 20px;
        }

        .footer {
            padding: 10px;
            font-size: 12pt;
        }
        /* Optional scaling if content overflows one page */
        body {
            zoom: 0.85;
        }
    }
</style>

@foreach (var bill in Model)
{
    <div class="bill-container">
        <div class="header">
            <h1>HOSTEL MEAL BILL</h1>
            <p>Hostel Name: Your Hostel Name</p>
            <p>Generated on: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
        </div>

        <div class="content">
            <div class="section">
                <h2>Bill Period</h2>
                <table>
                    <tr><th>Meal Cycle</th><td>@bill.MealCycle.StartDate.ToString("MMMM yyyy")</td></tr>
                    <tr><th>Period</th><td>@bill.MealCycle.StartDate.ToString("dd-MMMM-yyyy") - @bill.MealCycle.EndDate.ToString("dd-MMMM-yyyy")</td></tr>
                </table>
            </div>

            <div class="section">
                <h2>Member Details</h2>
                <table>
                    <tr><th>Member Name</th><td>@bill.Member.Name</td></tr>
                    <tr><th>Member ID</th><td>@bill.Member.MemberCode</td></tr>
                </table>
            </div>

            <div class="section">
                <h2>Meal Summary</h2>
                <table>
                    <tr><th>Total Bazar Costs (Market Expenses)</th><td>৳ @bill.TotalBazar</td></tr>
                    <tr><th>Member Meals</th><td>@bill.TotalMemberMeal</td></tr>
                    <tr><th>Meals (incl. Guests)</th><td>@bill.TotalGuestMeal</td></tr>
                    <tr><th>Total Meals</th><td>@bill.TotalMeal</td></tr>
                    <tr><th>Meal Rate (Bazar / Total Meals)</th><td>৳ @bill.MealRate</td></tr>
                    <tr><th>Your Meal Amount</th><td>৳ @bill.MealAmount</td></tr>
                </table>
            </div>

            <div class="section">
                <h2>Other Bills</h2>
                <table>
                    <tr><th>House/Rent Bill</th><td>৳ @bill.HouseBill</td></tr>
                    <tr><th>Utility Bill (Electricity, Water, etc.)</th><td>৳ @bill.UtilityBill</td></tr>
                    <tr><th>Other Bill</th><td>৳ @bill.OtherBill</td></tr>
                </table>
            </div>

            <div class="section">
                <table>
                    <tr class="total-row">
                        <th>Total Payable Amount</th>
                        <td>৳ @bill.TotalPayable</td>
                    </tr>
                </table>
            </div>

            <div class="notes">
                <strong>Notes:</strong><br>
                • Meal rate is calculated as Total Bazar ÷ Total Meals across all members.<br>
                • Guest meals are included in the total but charged via the shared rate.<br>
                • Please pay by the due date to avoid late fees.<br>
                • Contact the hostel manager for any queries or discrepancies.
            </div>
        </div>

        <div class="footer">
            Thank you for staying with us! | Signature: ________________________ (Manager)
        </div>
    </div>
}
