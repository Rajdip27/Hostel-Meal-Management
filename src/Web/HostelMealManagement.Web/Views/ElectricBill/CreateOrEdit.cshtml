@model HostelMealManagement.Application.ViewModel.ElectricBillVm

@{
    ViewData["Title"] = Model.Id > 0 ? "Edit Electric Bill" : "Create Electric Bill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- ===================== CORPORATE GLOSSY BLUE THEME ====================== -->
<style>
    body {
        background: #ffffff !important;
        font-family: "Segoe UI", sans-serif;
    }

    .page-title {
        font-size: 32px;
        font-weight: 700;
        color: #1e3a8a;
        margin-bottom: 8px;
    }

    .page-underline {
        height: 2px;
        background: #cbd5e1;
        margin-bottom: 25px;
    }

    .form-wrapper {
        background: rgba(255,255,255,0.9);
        padding: 35px;
        border-radius: 16px;
        border: 1px solid rgba(200,200,200,0.35);
        box-shadow: 0 8px 28px rgba(0,0,0,0.08);
    }

    .form-label {
        font-weight: 600;
        color: #203254;
    }

    .form-control,
    .form-select {
        height: 48px;
        border-radius: 10px;
        border: 1px solid #b6c1d1;
        padding: 12px;
        font-size: 15px;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #3559a8;
            box-shadow: 0 0 0 2px rgba(53,89,168,0.25);
        }

    .btn-save {
        background: #3559a8;
        color: white;
        padding: 12px 28px;
        border-radius: 10px;
        font-size: 17px;
        font-weight: 700;
        border: none;
        transition: .25s ease;
    }

        .btn-save:hover {
            background: #2d4d8f;
        }

    .btn-cancel {
        padding: 12px 28px;
        font-size: 17px;
        border-radius: 10px;
        background: white;
        border: 2px solid #6c757d;
        color: #6c757d;
        margin-left: 8px;
    }

        .btn-cancel:hover {
            background: #6c757d;
            color: white;
        }
</style>

<div class="container-fluid px-4 py-4">

    <h2 class="page-title">@ViewData["Title"]</h2>
    <div class="page-underline"></div>

    <div class="form-wrapper">

        <form asp-action="CreateOrEdit" method="post">
            <input type="hidden" asp-for="Id" />

            <!-- MEAL CYCLE -->
            <div class="mb-4">
                <label class="form-label">Meal Cycle</label>
                <select asp-for="MealCycleId"
                        asp-items="ViewBag.MealCycleId"
                        class="form-select">
                    <option value="">-- Select Meal Cycle --</option>
                </select>
            </div>

            <!-- CURRENT UNIT + TOTAL UNIT -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="form-label">Current Unit</label>
                    <input asp-for="CurrentUnit"
                           id="CurrentUnit"
                           class="form-control" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Total Unit</label>
                    <input asp-for="TotalUnit"
                           id="TotalUnit"
                           class="form-control"
                           readonly />
                </div>
            </div>

            <!-- PER UNIT RATE -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="form-label">Per Unit Rate</label>
                    <input asp-for="PerUnitRate"
                           id="PerUnitRate"
                           class="form-control" />
                </div>
            </div>

            <!-- TOTAL AMOUNT -->
            <div class="mb-4">
                <label class="form-label">Total Amount</label>
                <input asp-for="TotalAmount"
                       id="TotalAmount"
                       class="form-control"
                       readonly />
            </div>

            <!-- ACTIONS -->
            <div class="mt-4">
                <button type="submit" class="btn-save">Save</button>
                <a asp-action="Index" class="btn-cancel">Cancel</a>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        function calculateElectricBill() {

            let currentUnit = parseFloat($("#CurrentUnit").val()) || 0;
            let rate = parseFloat($("#PerUnitRate").val()) || 0;

            // TotalUnit = CurrentUnit (PreviousUnit removed)
            let totalUnit = currentUnit;
            let totalAmount = totalUnit * rate;

            $("#TotalUnit").val(totalUnit.toFixed(2));
            $("#TotalAmount").val(totalAmount.toFixed(2));
        }

        $(document).ready(function () {
            $("#CurrentUnit, #PerUnitRate").on("input", calculateElectricBill);
        });
    </script>
}
