@using HostelMealManagement.Application.ViewModel
@using HostelMealManagement.Application.Services
@using HostelMealManagement.Infrastructure.Helper.Acls
@inject IRolePermissionService Permission
@inject ISignInHelper SignInHelper
@model IEnumerable<ElectricBillVm>

@{
    ViewData["Title"] = "Electric Bill List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sl = 1;
    var role = SignInHelper.Roles;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>

    @if (Permission.CanCreate(role))
    {
        <a class="btn btn-primary"
           asp-controller="ElectricBill"
           asp-action="CreateOrEdit">
            <i class="fa fa-plus"></i> Add New
        </a>
    }
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th style="width:40px">#</th>
            <th>Meal Cycle</th>
          
            <th class="text-end">Current Unit</th>
            <th class="text-end">Total Unit</th>
            <th class="text-end">Per Unit Rate</th>
            <th class="text-end">Total Amount</th>
            <th style="width:160px">Actions</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var bill in Model)
            {
                <tr>
                    <td>@sl</td>
                    <td>
                        <strong>@bill.MealCycleName</strong>
                    </td>

                    <td class="text-end">@bill.CurrentUnit</td>
                    <td class="text-end">@bill.TotalUnit</td>
                    <td class="text-end">@bill.PerUnitRate</td>

                    <td class="text-end">
                        <span class="badge bg-success fs-6">
                            @bill.TotalAmount
                        </span>
                    </td>

                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            @if (Permission.CanEdit(role))
                            {
                                <a class="btn btn-info"
                                   asp-action="CreateOrEdit"
                                   asp-route-id="@bill.Id">
                                    Edit
                                </a>
                            }

                            @if (Permission.CanDelete(role))
                            {
                                <form asp-action="Delete"
                                      asp-route-id="@bill.Id"
                                      method="post"
                                      onsubmit="return confirm('Delete this electric bill?');">
                                    <button type="submit"
                                            class="btn btn-danger">
                                        Delete
                                    </button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>

                sl++;
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted py-4">
                    No Electric Bills Found
                </td>
            </tr>
        }
    </tbody>
</table>
