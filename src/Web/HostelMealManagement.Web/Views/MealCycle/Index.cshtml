@using HostelMealManagement.Application.ViewModel
@inject HostelMealManagement.Infrastructure.Helper.Acls.ISignInHelper SignInHelper
@model IEnumerable<MealCycleVm>

@{
    ViewData["Title"] = "Meal Cycle List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    bool isMember = SignInHelper.Roles.Contains("Member");
    int sl = 1;
}

<!-- ================= PREMIUM CORPORATE THEME ================= -->
<style>
    body {
        background: #f5f7fb !important;
        font-family: "Segoe UI", sans-serif;
    }

    h2 {
        color: #1f2937;
        font-weight: 700;
        margin-bottom: 18px;
    }

    /* ===== Primary Button ===== */
    .btn-primary {
        background: linear-gradient(135deg, #2563eb, #1e40af) !important;
        border: none !important;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 22px;
        color: #fff !important;
        box-shadow: 0 8px 20px rgba(37,99,235,0.35);
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #1e40af, #1e3a8a) !important;
            box-shadow: 0 10px 28px rgba(37,99,235,0.45);
            transform: translateY(-1px);
        }

    /* ===== Table Wrapper ===== */
    .table {
        background: #ffffff;
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid #e5e7eb !important;
        box-shadow: 0 12px 35px rgba(0,0,0,0.08);
    }

        /* ===== Table Header ===== */
        .table thead th {
            background: linear-gradient(135deg, #1e3a8a, #2563eb) !important;
            color: #ffffff !important;
            padding: 14px;
            font-size: 15px;
            font-weight: 600;
            letter-spacing: .4px;
            text-align: center;
            border: none !important;
            white-space: nowrap;
        }

        /* ===== Table Cells ===== */
        .table td {
            padding: 14px;
            font-size: 14.5px;
            color: #374151;
            vertical-align: middle !important;
        }

        /* ===== Row Hover ===== */
        .table tbody tr:hover {
            background-color: #eef2ff;
            transition: 0.2s ease;
        }

    /* ===== Action Buttons ===== */
    .btn-info {
        background: linear-gradient(135deg, #3b82f6, #2563eb) !important;
        border: none !important;
        color: #fff !important;
        border-radius: 8px;
        padding: 6px 12px;
        box-shadow: 0 6px 16px rgba(59,130,246,0.35);
        transition: 0.25s ease;
    }

        .btn-info:hover {
            background: linear-gradient(135deg, #1d4ed8, #1e40af) !important;
            box-shadow: 0 8px 22px rgba(59,130,246,0.45);
        }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444, #b91c1c) !important;
        border: none !important;
        border-radius: 8px;
        padding: 6px 12px;
        color: #fff !important;
        box-shadow: 0 6px 16px rgba(239,68,68,0.35);
        transition: 0.25s ease;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #dc2626, #991b1b) !important;
            box-shadow: 0 8px 22px rgba(239,68,68,0.45);
        }
</style>

<h2>@ViewData["Title"]</h2>

@if (!isMember)
{
    <p>
        <a class="btn btn-primary"
           asp-controller="mealcycle"
           asp-action="createoredit">
            Add New  Meal Cycle
        </a>
    </p>
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Member Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Total Days</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@sl</td>
                <td>@member.Name</td>
                <td>@member.StartDate</td>
                <td>@member.EndDate</td>
                <td>@member.TotalDays</td>
                <td>
                    <a class="btn btn-sm btn-info"
                       asp-action="createoredit"
                       asp-route-id="@member.Id">
                        Edit
                    </a>
                    <a class="btn btn-sm btn-danger"
                       asp-action="Delete"
                       asp-route-id="@member.Id">
                        Delete
                    </a>
                </td>
            </tr>
            sl++;
        }
    </tbody>
</table>
