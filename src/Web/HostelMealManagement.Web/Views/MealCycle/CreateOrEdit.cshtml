@model HostelMealManagement.Application.ViewModel.MealCycleVm
@{
    ViewData["Title"] = Model.Id == 0 ? "Create Meal Cycle" : "Edit Meal Cycle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<hr />

<form asp-action="createoredit" asp-controller="mealcycle" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="row">

        <!-- Name -->
        <div class="col-md-6 mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Start Date -->
        <div class="col-md-6 mb-3">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" type="date" class="form-control" id="StartDate" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <!-- End Date -->
        <div class="col-md-6 mb-3">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" type="date" class="form-control" id="EndDate" readonly />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <!-- Total Days -->
        <div class="col-md-6 mb-3">
            <label asp-for="TotalDays" class="form-label"></label>
            <input asp-for="TotalDays" class="form-control" id="TotalDays" readonly />
            <span asp-validation-for="TotalDays" class="text-danger"></span>
        </div>

    </div>

    <button type="submit" class="btn btn-primary">
        @(Model.Id == 0 ? "Create" : "Update")
    </button>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function () {

            function parseDate(value) {
                let p = value.split("-");
                return new Date(p[0], p[1] - 1, p[2]);  // local date, NOT UTC
            }

            function setEndDate() {
                let startVal = $("#StartDate").val();
                if (!startVal) return;

                let d = parseDate(startVal);
                let y = d.getFullYear();
                let m = d.getMonth();

                // Last day of selected month
                let end = new Date(y, m + 1, 0);

                // Format YYYY-MM-DD
                let e = end.toISOString().slice(0, 10);

                $("#EndDate").val(e);

                calcDays();
            }

            function calcDays() {
                let s = parseDate($("#StartDate").val());
                let e = parseDate($("#EndDate").val());
                let days = ((e - s) / 86400000) + 1;
                $("#TotalDays").val(days);
            }

            $("#StartDate").on("change", setEndDate);


}
