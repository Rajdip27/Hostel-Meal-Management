@model HostelMealManagement.Application.ViewModel.ElectricBillVm

@{
    ViewData["Title"] = Model.Id == 0 ? "Create Electric Bill" : "Edit Electric Bill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- ===================== CORPORATE GLOSSY BLUE THEME ====================== -->
<style>
    body {
        background: #ffffff !important;
        font-family: "Segoe UI", sans-serif;
    }

    h2 {
        font-size: 32px;
        font-weight: 700;
        color: #1e3a8a;
        margin-bottom: 10px;
    }

    hr {
        border-top: 2px solid #cbd5e1 !important;
        opacity: 0.5;
        margin-bottom: 25px;
    }

    form {
        background: rgba(255,255,255,0.75);
        padding: 30px;
        border-radius: 16px;
        border: 1px solid rgba(200,200,200,0.35);
        box-shadow: 0 8px 28px rgba(0,0,0,0.08);
    }

    .form-label {
        font-weight: 600;
        color: #203254;
    }

    .form-control,
    .form-select {
        height: 48px;
        border-radius: 10px !important;
        border: 1px solid #b6c1d1;
        background: rgba(255,255,255,0.85);
        font-size: 15px;
        transition: .25s ease;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #3559a8;
            box-shadow: 0 0 0 2px rgba(53,89,168,0.25);
        }

    .btn-primary {
        background: #3559a8 !important;
        border: none !important;
        font-size: 17px;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 26px;
        box-shadow: 0 6px 18px rgba(53,89,168,0.25);
        transition: .25s ease;
    }

        .btn-primary:hover {
            background: #2d4d8f !important;
            box-shadow: 0 8px 25px rgba(53,89,168,0.35);
        }

    .text-danger {
        font-size: 13px;
    }
</style>

<h2>@ViewData["Title"]</h2>
<hr />

<form asp-action="CreateOrEdit" asp-controller="ElectricBill" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="row">

        <!-- Meal Cycle -->
        <div class="col-md-6 mb-3">
            <label asp-for="MealCycleId" class="form-label">Meal Cycle</label>
            <select asp-for="MealCycleId"
                    asp-items="ViewBag.MealCycleId"
                    class="form-select">
                <option value="">-- Select Meal Cycle --</option>
            </select>
            <span asp-validation-for="MealCycleId" class="text-danger"></span>
        </div>

        <!-- Per Unit Rate -->
        <div class="col-md-6 mb-3">
            <label asp-for="PerUnitRate" class="form-label"></label>
            <input asp-for="PerUnitRate" class="form-control calc" />
            <span asp-validation-for="PerUnitRate" class="text-danger"></span>
        </div>

        <!-- Previous Unit -->
        <div class="col-md-6 mb-3">
            <label asp-for="PreviousUnit" class="form-label"></label>
            <input asp-for="PreviousUnit" class="form-control calc" />
            <span asp-validation-for="PreviousUnit" class="text-danger"></span>
        </div>

        <!-- Current Unit -->
        <div class="col-md-6 mb-3">
            <label asp-for="CurrentUnit" class="form-label"></label>
            <input asp-for="CurrentUnit" class="form-control calc" />
            <span asp-validation-for="CurrentUnit" class="text-danger"></span>
        </div>

        <!-- Total Unit -->
        <div class="col-md-6 mb-3">
            <label asp-for="TotalUnit" class="form-label"></label>
            <input asp-for="TotalUnit" class="form-control" readonly />
        </div>

        <!-- Total Amount -->
        <div class="col-md-6 mb-3">
            <label asp-for="TotalAmount" class="form-label"></label>
            <input asp-for="TotalAmount" class="form-control" readonly />
        </div>

    </div>

    <button type="submit" class="btn btn-primary">
        @(Model.Id == 0 ? "Create" : "Update")
    </button>

    <a asp-action="Index" class="btn btn-secondary ms-2">
        Cancel
    </a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        function calculate() {
            let prev = parseFloat($("#PreviousUnit").val()) || 0;
            let curr = parseFloat($("#CurrentUnit").val()) || 0;
            let rate = parseFloat($("#PerUnitRate").val()) || 0;

            let totalUnit = curr - prev;
            let totalAmount = totalUnit * rate;

            $("#TotalUnit").val(totalUnit.toFixed(2));
            $("#TotalAmount").val(totalAmount.toFixed(2));
        }

        $(".calc").on("input", calculate);
    </script>
}
