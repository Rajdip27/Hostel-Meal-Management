@model HostelMealManagement.Application.ViewModel.MealCycleVm

@{
    ViewData["Title"] = Model.Id == 0 ? "Create Meal Cycle" : "Edit Meal Cycle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- ===================== CORPORATE GLOSSY BLUE THEME ====================== -->
<style>
    body {
        background: #ffffff !important;
        font-family: "Segoe UI", sans-serif;
    }

    /* ---------- Page Title ---------- */
    h2 {
        font-size: 32px;
        font-weight: 700;
        color: #1e3a8a;
        margin-bottom: 10px;
    }

    hr {
        border-top: 2px solid #cbd5e1 !important;
        opacity: 0.5;
        margin-bottom: 25px;
    }

    /* ---------- Glossy Form Box ---------- */
    form {
        background: rgba(255,255,255,0.75);
        padding: 30px;
        border-radius: 16px;
        border: 1px solid rgba(200,200,200,0.35);
        box-shadow: 0 8px 28px rgba(0,0,0,0.08);
    }

    /* ---------- Labels ---------- */
    .form-label {
        font-weight: 600;
        color: #203254;
    }

    /* ---------- Inputs ---------- */
    .form-control {
        height: 48px;
        border-radius: 10px !important;
        border: 1px solid #b6c1d1;
        background: rgba(255,255,255,0.85);
        transition: .25s ease;
        font-size: 15px;
    }

        .form-control:focus {
            border-color: #3559a8;
            box-shadow: 0 0 0 2px rgba(53,89,168,0.25);
        }

    /* ---------- Save Button (Glossy Blue) ---------- */
    .btn-primary {
        background: #3559a8 !important;
        border: none !important;
        font-size: 17px;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 26px;
        box-shadow: 0 6px 18px rgba(53,89,168,0.25);
        transition: .25s ease;
    }

        .btn-primary:hover {
            background: #2d4d8f !important;
            box-shadow: 0 8px 25px rgba(53,89,168,0.35);
        }

        .btn-primary:active {
            background: #263f78 !important;
            transform: scale(0.97);
        }

    .text-danger {
        font-size: 13px;
    }

</style>


<h2>@ViewData["Title"]</h2>
<hr />

<form asp-action="createoredit" asp-controller="mealcycle" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="row">

        <!-- Name -->
        <div class="col-md-6 mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Start Date -->
        <div class="col-md-6 mb-3">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" type="date" class="form-control" id="StartDate" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <!-- End Date -->
        <div class="col-md-6 mb-3">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" type="date" class="form-control" id="EndDate" readonly />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <!-- Total Days -->
        <div class="col-md-6 mb-3">
            <label asp-for="TotalDays" class="form-label"></label>
            <input asp-for="TotalDays" class="form-control" id="TotalDays" readonly />
            <span asp-validation-for="TotalDays" class="text-danger"></span>
        </div>

    </div>

    <button type="submit" class="btn btn-primary">
        @(Model.Id == 0 ? "Create" : "Update")
    </button>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- jQuery for Date Logic -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        $(function () {

            function parseDate(value) {
                if (!value) return null;
                let p = value.split("-");
                return new Date(p[0], p[1] - 1, p[2]);
            }

            function formatDateLocal(date) {
                const y = date.getFullYear();
                const m = String(date.getMonth() + 1).padStart(2, "0");
                const d = String(date.getDate()).padStart(2, "0");
                return `${y}-${m}-${d}`;
            }

            function setEndDate() {
                let startVal = $("#StartDate").val();
                if (!startVal) return;

                let d = parseDate(startVal);
                if (!d) return;

                let y = d.getFullYear();
                let m = d.getMonth();

                // Last day of selected month (local time)
                let end = new Date(y, m + 1, 0);

                $("#EndDate").val(formatDateLocal(end));
                calcDays();
            }

            function calcDays() {
                let s = parseDate($("#StartDate").val());
                let e = parseDate($("#EndDate").val());
                if (!s || !e) return;

                let diffMs = e - s;
                let days = diffMs / 86400000 + 1;

                $("#TotalDays").val(days);
            }

            $("#StartDate").on("change", setEndDate);
        });
    </script>

}