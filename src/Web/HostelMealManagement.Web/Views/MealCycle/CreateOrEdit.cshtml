@model HostelMealManagement.Application.ViewModel.MealCycleVm

@{
    ViewData["Title"] = Model.Id == 0 ? "Create Meal Cycle" : "Edit Meal Cycle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- ================= PREMIUM CORPORATE THEME ================= -->
<style>
    body {
        background: #f5f7fb !important;
        font-family: "Segoe UI", sans-serif;
    }

    .page-title {
        color: #1f2937;
        font-weight: 700;
        margin-bottom: 6px;
    }

    .page-underline {
        width: 80px;
        height: 4px;
        background: linear-gradient(135deg, #2563eb, #1e40af);
        border-radius: 4px;
        margin-bottom: 24px;
    }

    /* ===== Form Wrapper ===== */
    .form-wrapper {
        background: #ffffff;
        border-radius: 18px;
        padding: 30px;
        border: 1px solid #e5e7eb;
        box-shadow: 0 14px 40px rgba(0,0,0,0.08);
        max-width: 900px;
    }

    /* ===== Labels ===== */
    .form-label {
        font-weight: 600;
        color: #374151;
        margin-bottom: 6px;
    }

    /* ===== Inputs ===== */
    .form-control {
        border-radius: 10px;
        padding: 10px 14px;
        border: 1px solid #d1d5db;
        font-size: 14.5px;
    }

        .form-control:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(37,99,235,0.15);
        }

    /* ===== Primary Button ===== */
    .btn-primary {
        background: linear-gradient(135deg, #2563eb, #1e40af) !important;
        border: none !important;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 26px;
        color: #fff !important;
        box-shadow: 0 8px 20px rgba(37,99,235,0.35);
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #1e40af, #1e3a8a) !important;
            box-shadow: 0 10px 28px rgba(37,99,235,0.45);
            transform: translateY(-1px);
        }

    /* ===== Validation ===== */
    .text-danger {
        font-size: 13px;
    }
</style>

<div class="container-fluid px-4 py-4">

    <h2 class="page-title">@ViewData["Title"]</h2>
    <div class="page-underline"></div>

    <div class="form-wrapper">

        <form asp-action="createoredit"
              asp-controller="mealcycle"
              method="post">

            <input type="hidden" asp-for="Id" />

            <div class="row">

                <!-- Name -->
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Start Date -->
                <div class="col-md-6 mb-3">
                    <label asp-for="StartDate" class="form-label"></label>
                    <input asp-for="StartDate"
                           type="date"
                           class="form-control"
                           id="StartDate" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <!-- End Date -->
                <div class="col-md-6 mb-3">
                    <label asp-for="EndDate" class="form-label"></label>
                    <input asp-for="EndDate"
                           type="date"
                           class="form-control"
                           id="EndDate"
                           readonly />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <!-- Total Days -->
                <div class="col-md-6 mb-3">
                    <label asp-for="TotalDays" class="form-label"></label>
                    <input asp-for="TotalDays"
                           class="form-control"
                           id="TotalDays"
                           readonly />
                    <span asp-validation-for="TotalDays" class="text-danger"></span>
                </div>

            </div>

            <button type="submit" class="btn btn-primary">
                @(Model.Id == 0 ? "Create" : "Update")
            </button>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- jQuery for Date Logic -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        $(function () {

            function parseDate(value) {
                if (!value) return null;
                let p = value.split("-");
                return new Date(p[0], p[1] - 1, p[2]);
            }

            function formatDateLocal(date) {
                const y = date.getFullYear();
                const m = String(date.getMonth() + 1).padStart(2, "0");
                const d = String(date.getDate()).padStart(2, "0");
                return `${y}-${m}-${d}`;
            }

            function setEndDate() {
                let startVal = $("#StartDate").val();
                if (!startVal) return;

                let d = parseDate(startVal);
                if (!d) return;

                let y = d.getFullYear();
                let m = d.getMonth();

                let end = new Date(y, m + 1, 0);

                $("#EndDate").val(formatDateLocal(end));
                calcDays();
            }

            function calcDays() {
                let s = parseDate($("#StartDate").val());
                let e = parseDate($("#EndDate").val());
                if (!s || !e) return;

                let diffMs = e - s;
                let days = diffMs / 86400000 + 1;

                $("#TotalDays").val(days);
            }

            $("#StartDate").on("change", setEndDate);
        });
    </script>
}
