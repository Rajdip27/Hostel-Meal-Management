@using HostelMealManagement.Application.ViewModel
@using HostelMealManagement.Infrastructure.Helper.Acls
@inject ISignInHelper SignInHelper

@model IEnumerable<UtilityBillVm>

@{
    ViewData["Title"] = "Utility Bill List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var roles = SignInHelper.Roles;
}

<!-- ================= PREMIUM CORPORATE THEME ================= -->
<style>
    body {
        background: #f5f7fb !important;
        font-family: "Segoe UI", sans-serif;
    }

    h2 {
        color: #1f2937;
        font-weight: 700;
        margin-bottom: 18px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #2563eb, #1e40af) !important;
        border: none !important;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 22px;
        box-shadow: 0 8px 20px rgba(37,99,235,0.35);
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #1e40af, #1e3a8a) !important;
            box-shadow: 0 10px 28px rgba(37,99,235,0.45);
            transform: translateY(-1px);
        }

    .utility-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 12px 35px rgba(0,0,0,0.08);
        border: 1px solid #e5e7eb;
        overflow: hidden;
    }

    .utility-card-header {
        background: linear-gradient(135deg, #1e3a8a, #2563eb);
        color: #ffffff;
        padding: 14px 20px;
        font-weight: 600;
    }

    .table thead th {
        background: linear-gradient(135deg, #1e3a8a, #2563eb) !important;
        color: #ffffff !important;
        text-align: center;
        border: none !important;
    }

    .table td {
        text-align: center;
        vertical-align: middle;
    }

    .grand-total {
        font-size: 18px;
        font-weight: 700;
        color: #16a34a;
    }
</style>

<h2>@ViewData["Title"]</h2>

@if (!roles.Contains("Member"))
{
    <p>
        <a class="btn btn-primary"
           asp-controller="UtilityBill"
           asp-action="CreateOrEdit">
            Add New Utility Bill
        </a>
    </p>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        No utility bills found.
    </div>
}
else
{
    @foreach (var bill in Model.OrderByDescending(x => x.Date))
    {
        var total = bill.CurrentBill + bill.GasBill + bill.ServantBill;

        <div class="utility-card mb-4">
            <div class="utility-card-header">
                Billing Month: @bill.Month | Date: @bill.Date.ToString("dd MMM yyyy")
            </div>

            <div class="card-body p-4">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Current Bill</th>
                            <th>Gas Bill</th>
                            <th>Servant Bill</th>
                            <th>Total</th>
                            <th style="width:170px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@bill.CurrentBill.ToString("0.00")</td>
                            <td>@bill.GasBill.ToString("0.00")</td>
                            <td>@bill.ServantBill.ToString("0.00")</td>
                            <td class="grand-total">@total.ToString("0.00")</td>
                            <td>
                                @if (!roles.Contains("Member"))
                                {
                                    <a class="btn btn-sm btn-info"
                                       asp-action="CreateOrEdit"
                                       asp-route-id="@bill.Id">
                                        Edit
                                    </a>

                                    <form asp-action="Delete"
                                          asp-route-id="@bill.Id"
                                          method="post"
                                          style="display:inline"
                                          onsubmit="return confirm('Are you sure you want to delete this utility bill?');">
                                        <button class="btn btn-sm btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
}
