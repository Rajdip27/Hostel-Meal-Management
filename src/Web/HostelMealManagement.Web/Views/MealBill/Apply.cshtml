@using HostelMealManagement.Core.Entities
@inject HostelMealManagement.Infrastructure.Helper.Acls.ISignInHelper SignInHelper
@model IEnumerable<MealBill>

@{
    Layout = null;
}

<style>
    /* ================= PAGE ================= */
    body {
        background: #ffffff !important;
        font-family: "Segoe UI", sans-serif;
        padding: 20px;
    }

    /* ================= TABLE CONTAINER ================= */
    .table {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #d7dce3;
        box-shadow: 0 8px 25px rgba(0,0,0,0.06);
    }

    /* ================= HEADER ================= */
    .custom-header th {
        background: linear-gradient( 135deg, rgba(33, 71, 155, 0.95), rgba(38, 92, 170, 0.95) ) !important;
        color: #ffffff !important;
        font-weight: 600;
        text-align: center;
        padding: 12px;
        letter-spacing: .3px;
        border: none !important;
        font-size: 14px;
        white-space: nowrap;
    }

    /* ================= BODY CELLS ================= */
    .table td {
        vertical-align: middle;
        padding: 10px 12px;
        font-size: 14px;
        color: #2b3340;
        text-align: center;
    }

    /* ================= ROW HOVER ================= */
    .table tbody tr:hover {
        background-color: #f1f5ff;
        transition: 0.2s ease;
    }

    /* ================= NUMBERS ================= */
    .table td {
        font-variant-numeric: tabular-nums;
    }

    /* ================= RESPONSIVE ================= */
    .table-responsive {
        border-radius: 12px;
    }
</style>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="custom-header">
            <tr>
                <th>Member Name</th>
                <th>Card No</th>
                <th>Total Bazar</th>
                <th>Total Member Meal</th>
                <th>Total Guest Meal</th>
                <th>Total Meal</th>
                <th>Meal Rate</th>
                <th>Meal Amount</th>
                <th>House Bill</th>
                <th>Utility Bill</th>
                <th>Other Bill</th>
                <th>Total Payable</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bill in Model)
            {
                <tr>
                    <td><strong>@bill.Member.Name</strong></td>
                    <td>@bill.Member.MemberCode</td>
                    <td>@bill.TotalBazar</td>
                    <td>@bill.TotalMemberMeal</td>
                    <td>@bill.TotalGuestMeal</td>
                    <td>@bill.TotalMeal</td>
                    <td>@bill.MealRate</td>
                    <td><strong>@bill.MealAmount</strong></td>
                    <td>@bill.HouseBill</td>
                    <td>@bill.UtilityBill</td>
                    <td>@bill.OtherBill</td>
                    <td class="fw-bold text-primary">
                        @bill.TotalPayable
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
