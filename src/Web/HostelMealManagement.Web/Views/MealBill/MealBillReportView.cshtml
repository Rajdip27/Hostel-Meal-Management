@using HostelMealManagement.Core.Entities
@model IEnumerable<MealBill>

@{
    Layout = null;
}

<style>
    /* ================= PAGE BASE ================= */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f5f7fb;
        margin: 0;
        padding: 20px;
        color: #1f2937;
    }

    /* ================= CONTAINER ================= */
    .bill-container {
        max-width: 820px;
        margin: 0 auto 40px auto;
        background: #ffffff;
        border-radius: 14px;
        box-shadow: 0 12px 35px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    /* ================= HEADER ================= */
    .header {
        background: linear-gradient(135deg, #1e3a8a, #2563eb);
        color: #ffffff;
        padding: 32px;
        text-align: center;
    }

        .header h1 {
            margin: 0;
            font-size: 28px;
            letter-spacing: 1px;
        }

        .header p {
            margin: 6px 0 0;
            font-size: 15px;
            opacity: 0.9;
        }

    /* ================= CONTENT ================= */
    .content {
        padding: 32px;
    }

    .section {
        margin-bottom: 30px;
    }

        .section h2 {
            border-bottom: 2px solid #2563eb;
            padding-bottom: 6px;
            font-size: 20px;
            font-weight: 600;
            color: #1e3a8a;
            margin-bottom: 12px;
        }

    /* ================= TABLE ================= */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 8px;
        background: #ffffff;
        border-radius: 10px;
        overflow: hidden;
    }

    th, td {
        padding: 12px 14px;
        text-align: left;
        border-bottom: 1px solid #e5e7eb;
        font-size: 14.5px;
    }

    th {
        background: #f1f5ff;
        color: #1e3a8a;
        font-weight: 600;
        width: 42%;
    }

    tr:last-child td {
        border-bottom: none;
    }

    /* ================= TOTAL ================= */
    .total-row {
        font-weight: 700;
        font-size: 17px;
        background: #e0f2fe !important;
        color: #0f172a;
    }

    /* ================= NOTES ================= */
    .notes {
        background: #f8fafc;
        padding: 16px;
        border-radius: 10px;
        font-size: 14px;
        line-height: 1.7;
        color: #334155;
        border-left: 4px solid #2563eb;
    }

    /* ================= FOOTER ================= */
    .footer {
        text-align: center;
        padding: 20px;
        background: #1e3a8a;
        color: #ffffff;
        font-size: 14px;
    }

    /* ================= PRINT ================= */
    @@media print {
        body {
            background: #ffffff;
            padding: 0;
        }

        .bill-container {
            box-shadow: none;
            border-radius: 0;
            margin-bottom: 0;
            page-break-after: always;
        }
    }
</style>

@foreach (var bill in Model)
{
    <div class="bill-container">

        <!-- HEADER -->
        <div class="header">
            <h1>HOSTEL MEAL BILL</h1>
            <p>Hostel Name: Your Hostel Name</p>
            <p>Generated on: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
        </div>

        <!-- CONTENT -->
        <div class="content">

            <!-- BILL PERIOD -->
            <div class="section">
                <h2>Bill Period</h2>
                <table>
                    <tr>
                        <th>Meal Cycle</th>
                        <td>@bill.MealCycle.StartDate.ToString("MMMM yyyy")</td>
                    </tr>
                    <tr>
                        <th>Period</th>
                        <td>
                            @bill.MealCycle.StartDate.ToString("dd MMMM yyyy")
                            -
                            @bill.MealCycle.EndDate.ToString("dd MMMM yyyy")
                        </td>
                    </tr>
                </table>
            </div>

            <!-- MEMBER DETAILS -->
            <div class="section">
                <h2>Member Details</h2>
                <table>
                    <tr>
                        <th>Member Name</th>
                        <td>@bill.Member.Name</td>
                    </tr>
                    <tr>
                        <th>Member ID</th>
                        <td>@bill.Member.MemberCode</td>
                    </tr>
                </table>
            </div>

            <!-- MEAL SUMMARY -->
            <div class="section">
                <h2>Meal Summary</h2>
                <table>
                    <tr><th>Total Bazar Costs</th><td>৳ @bill.TotalBazar</td></tr>
                    <tr><th>Member Meals</th><td>@bill.TotalMemberMeal</td></tr>
                    <tr><th>Meals (incl. Guests)</th><td>@bill.TotalGuestMeal</td></tr>
                    <tr><th>Total Meals</th><td>@bill.TotalMeal</td></tr>
                    <tr><th>Meal Rate</th><td>৳ @bill.MealRate</td></tr>
                    <tr><th>Your Meal Amount</th><td>৳ @bill.MealAmount</td></tr>
                </table>
            </div>

            <!-- OTHER BILLS -->
            <div class="section">
                <h2>Other Bills</h2>
                <table>
                    <tr><th>House / Rent Bill</th><td>৳ @bill.HouseBill</td></tr>
                    <tr><th>Utility Bill</th><td>৳ @bill.UtilityBill</td></tr>
                    <tr><th>Other Bill</th><td>৳ @bill.OtherBill</td></tr>
                </table>
            </div>

            <!-- TOTAL -->
            <div class="section">
                <table>
                    <tr class="total-row">
                        <th>Total Payable Amount</th>
                        <td>৳ @bill.TotalPayable</td>
                    </tr>
                </table>
            </div>

            <!-- NOTES -->
            <div class="notes">
                <strong>Notes:</strong><br />
                • Meal rate is calculated as Total Bazar ÷ Total Meals across all members.<br />
                • Guest meals are included in the total but charged via the shared rate.<br />
                • Please pay by the due date to avoid late fees.<br />
                • Contact the hostel manager for any queries or discrepancies.
            </div>

        </div>

        <!-- FOOTER -->
        <div class="footer">
            Thank you for staying with us! &nbsp; | &nbsp;
            Signature: ________________________ (Manager)
        </div>

    </div>
}
