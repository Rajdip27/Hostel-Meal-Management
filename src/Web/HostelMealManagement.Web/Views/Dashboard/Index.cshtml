    <script>
        // Initialize Charts
        document.addEventListener('DOMContentLoaded', function() {
            // Meal Consumption Chart
            const mealCtx = document.getElementById('hmmMealChart').getContext('2d');
            const mealChart = new Chart(mealCtx, {
                type: 'line',
                data: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    datasets: [{
                        label: 'Breakfast',
                        data: [320, 340, 310, 350, 330, 280, 290],
                        borderColor: '#6a11cb',
                        backgroundColor: 'rgba(106, 17, 203, 0.1)',
                        tension: 0.4,
                        fill: true
                    }, {
                        label: 'Lunch',
                        data: [450, 470, 440, 480, 460, 420, 400],
                        borderColor: '#2575fc',
                        backgroundColor: 'rgba(37, 117, 252, 0.1)',
                        tension: 0.4,
                        fill: true
                    }, {
                        label: 'Dinner',
                        data: [380, 400, 370, 410, 390, 350, 330],
                        borderColor: '#ff6b6b',
                        backgroundColor: 'rgba(255, 107, 107, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                drawBorder: false
