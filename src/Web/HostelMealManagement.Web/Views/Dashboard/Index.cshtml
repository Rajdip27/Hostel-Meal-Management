@inject HostelMealManagement.Infrastructure.Helper.Acls.ISignInHelper SignInHelper
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-container">
    <!-- Header -->
    <div class="dashboard-header mb-4">
        <h2 class="mb-2">Admin Dashboard</h2>
        <p class="text-muted">Welcome back, Administrator! Here's what's happening today.</p>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
          

            <div class="stat-card card-1">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-content">
                    <h6>Total Students</h6>
                    <h2>1,247</h2>
                    <small class="text-success">
                        <i class="fas fa-arrow-up"></i> 12% from last month
                    </small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card card-2">
                <div class="stat-icon">
                    <i class="fas fa-utensils"></i>
                </div>
                <div class="stat-content">
                    <h6>Today's Meals</h6>
                    <h2>856</h2>
                    <small class="text-success">
                        <i class="fas fa-arrow-up"></i> 8% from yesterday
                    </small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card card-3">
                <div class="stat-icon">
                    <i class="fas fa-money-bill-wave"></i>
                </div>
                <div class="stat-content">
                    <h6>Pending Payments</h6>
                    <h2>৳45,670</h2>
                    <small class="text-danger">
                        <i class="fas fa-arrow-down"></i> 5% from last week
                    </small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card card-4">
                <div class="stat-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <div class="stat-content">
                    <h6>Active Meal Plans</h6>
                    <h2>24</h2>
                    <small class="text-success">
                        3 new this week
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="row g-4 mb-4">
        <div class="col-md-8">
            <div class="chart-card">
                <div class="chart-header">
                    <h5>Meal Consumption Trend</h5>
                    <div class="chart-actions">
                        <button class="btn-chart-action active">Week</button>
                        <button class="btn-chart-action">Month</button>
                        <button class="btn-chart-action">Year</button>
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="mealChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="chart-card">
                <div class="chart-header">
                    <h5>Payment Status</h5>
                </div>
                <div class="chart-container">
                    <canvas id="paymentChart"></canvas>
                </div>
                <div class="chart-legend">
                    <div class="legend-item">
                        <span class="legend-color paid"></span>
                        <span>Paid (68%)</span>
                    </div>
                    <div class="legend-item">
                        <span class="legend-color pending"></span>
                        <span>Pending (32%)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="chart-card">
                <div class="chart-header">
                    <h5>Recent Meals</h5>
                </div>
                <div class="activity-list">
                    <div class="activity-item">
                        <div class="activity-icon breakfast">
                            <i class="fas fa-sun"></i>
                        </div>
                        <div class="activity-content">
                            <h6>Breakfast</h6>
                            <small>Today, 8:00 AM - 420 students served</small>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon lunch">
                            <i class="fas fa-sun"></i>
                        </div>
                        <div class="activity-content">
                            <h6>Lunch</h6>
                            <small>Today, 1:00 PM - 580 students served</small>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon dinner">
                            <i class="fas fa-moon"></i>
                        </div>
                        <div class="activity-content">
                            <h6>Dinner</h6>
                            <small>Yesterday, 7:30 PM - 510 students served</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="chart-card">
                <div class="chart-header">
                    <h5>Quick Actions</h5>
                </div>
                <div class="quick-actions">
                    <button class="quick-action-btn">
                        <i class="fas fa-plus"></i>
                        <span>Add New Meal</span>
                    </button>
                    <a asp-controller="Member" asp-action="CreateOrEdit" class="quick-action-btn">
                        <i class="fas fa-user-plus"></i>
                        <span>Add Member</span>
                    </a>

                    <button class="quick-action-btn">
                        <i class="fas fa-file-invoice"></i>
                        <span>Generate Report</span>
                    </button>
                    <button class="quick-action-btn">
                        <i class="fas fa-bell"></i>
                        <span>Send Notification</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .dashboard-container {
        padding: 0 10px;
    }

    .dashboard-header h2 {
        color: #2C3E50;
        font-weight: 700;
    }

    /* Stat Cards */
    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 20px;
        display: flex;
        align-items: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        height: 100%;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 24px;
        color: white;
    }

    .card-1 .stat-icon {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card-2 .stat-icon {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .card-3 .stat-icon {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .card-4 .stat-icon {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    }

    .stat-content h6 {
        color: #7f8c8d;
        font-size: 0.9rem;
        margin-bottom: 5px;
        font-weight: 600;
    }

    .stat-content h2 {
        color: #2C3E50;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .stat-content small {
        font-size: 0.8rem;
        font-weight: 500;
    }

    /* Chart Cards */
    .chart-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border: none;
        height: 100%;
    }

    .chart-header {
        display: flex;
        justify-content: between;
        align-items: center;
        margin-bottom: 20px;
    }

        .chart-header h5 {
            color: #2C3E50;
            font-weight: 600;
            margin: 0;
        }

    .chart-actions {
        display: flex;
        gap: 5px;
    }

    .btn-chart-action {
        background: #f8f9fa;
        border: 1px solid #e9ecef;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        transition: all 0.3s ease;
    }

        .btn-chart-action.active,
        .btn-chart-action:hover {
            background: #3498db;
            color: white;
            border-color: #3498db;
        }

    .chart-container {
        position: relative;
        height: 300px;
        width: 100%;
    }

    .chart-legend {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .legend-item {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
    }

    .legend-color {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

        .legend-color.paid {
            background: #2ecc71;
        }

        .legend-color.pending {
            background: #e74c3c;
        }

    /* Activity List */
    .activity-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .activity-item {
        display: flex;
        align-items: center;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 10px;
        transition: background 0.3s ease;
    }

        .activity-item:hover {
            background: #e9ecef;
        }

    .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        color: white;
    }

        .activity-icon.breakfast {
            background: #f39c12;
        }

        .activity-icon.lunch {
            background: #e74c3c;
        }

        .activity-icon.dinner {
            background: #3498db;
        }

    .activity-content h6 {
        margin: 0;
        color: #2C3E50;
        font-weight: 600;
    }

    .activity-content small {
        color: #7f8c8d;
        font-size: 0.85rem;
    }

    /* Quick Actions */
    .quick-actions {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

    .quick-action-btn {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px 10px;
        background: #f8f9fa;
        border: 2px dashed #dee2e6;
        border-radius: 10px;
        transition: all 0.3s ease;
        color: #7f8c8d;
    }

        .quick-action-btn:hover {
            background: #3498db;
            color: white;
            border-color: #3498db;
            transform: translateY(-3px);
        }

        .quick-action-btn i {
            font-size: 24px;
            margin-bottom: 8px;
        }

        .quick-action-btn span {
            font-size: 0.85rem;
            font-weight: 500;
        }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Meal Consumption Chart
        const mealCtx = document.getElementById('mealChart').getContext('2d');
        new Chart(mealCtx, {
            type: 'line',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Meals Served',
                    data: [120, 150, 180, 160, 200, 220, 190],
                    borderColor: '#3498db',
                    backgroundColor: 'rgba(52, 152, 219, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: '#3498db',
                    pointBorderColor: '#ffffff',
                    pointBorderWidth: 2,
                    pointRadius: 5,
                    pointHoverRadius: 7
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.7)',
                        titleFont: { size: 14 },
                        bodyFont: { size: 14 },
                        padding: 10,
                        cornerRadius: 8
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        },
                        ticks: {
                            font: { size: 12 }
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        },
                        ticks: {
                            font: { size: 12 }
                        }
                    }
                }
            }
        });

        // Payment Status Chart
        const paymentCtx = document.getElementById('paymentChart').getContext('2d');
        new Chart(paymentCtx, {
            type: 'doughnut',
            data: {
                labels: ['Paid', 'Pending'],
                datasets: [{
                    data: [68, 32],
                    backgroundColor: ['#2ecc71', '#e74c3c'],
                    borderWidth: 0,
                    spacing: 5
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '70%',
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.7)',
                        bodyFont: { size: 14 },
                        padding: 10,
                        cornerRadius: 8
                    }
                }
            }
        });

        // Chart period buttons functionality
        document.querySelectorAll('.btn-chart-action').forEach(button => {
            button.addEventListener('click', function() {
                document.querySelectorAll('.btn-chart-action').forEach(btn => {
                    btn.classList.remove('active');
                });
                this.classList.add('active');

                // Here you would typically update the chart data based on the selected period
                // For now, we'll just log the action
                console.log('Selected period:', this.textContent);
            });
        });
    </script>
}