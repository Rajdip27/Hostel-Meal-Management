    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        :root {
            --hmm-primary: #6a11cb;
            --hmm-primary-dark: #4d0d9c;
            --hmm-secondary: #2575fc;
            --hmm-accent: #ff6b6b;
            --hmm-success: #2ecc71;
            --hmm-warning: #f39c12;
            --hmm-danger: #e74c3c;
            --hmm-light: #f8f9fa;
            --hmm-dark: #2c3e50;
            --hmm-gray: #6c757d;
            --hmm-border: #e9ecef;
        }

        .hmm-dashboard-root {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f5f7fb;
            min-height: 100vh;
        }

        /* Sidebar Styles */
        .hmm-sidebar-wrapper {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            width: 280px;
            background: linear-gradient(180deg, var(--hmm-primary) 0%, var(--hmm-secondary) 100%);
            z-index: 1000;
            transition: all 0.3s ease;
            box-shadow: 4px 0 20px rgba(0, 0, 0, 0.1);
        }

        .hmm-sidebar-brand {
            padding: 2rem 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .hmm-brand-logo {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .hmm-brand-icon {
            width: 45px;
            height: 45px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .hmm-brand-text {
            font-size: 1.5rem;
            font-weight: 700;
            color: white;
            letter-spacing: -0.5px;
        }

        .hmm-sidebar-nav {
            padding: 1.5rem 0;
        }

        .hmm-nav-item {
            margin-bottom: 0.5rem;
        }

        .hmm-nav-link {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 1rem 1.5rem;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
        }

            .hmm-nav-link:hover {
                background: rgba(255, 255, 255, 0.1);
                color: white;
                border-left-color: rgba(255, 255, 255, 0.5);
            }

            .hmm-nav-link.active {
                background: rgba(255, 255, 255, 0.15);
                color: white;
                border-left-color: white;
            }

        .hmm-nav-icon {
            width: 20px;
            text-align: center;
            font-size: 1.1rem;
        }

        .hmm-nav-text {
            font-weight: 500;
            font-size: 0.95rem;
        }

        /* Main Content Styles */
        .hmm-main-content {
            margin-left: 280px;
            padding: 2rem;
            transition: all 0.3s ease;
        }

        /* Header Styles */
        .hmm-dashboard-header {
            background: white;
            border-radius: 16px;
            padding: 1.5rem 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid var(--hmm-border);
        }

        .hmm-header-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--hmm-dark);
            margin: 0;
        }

        .hmm-header-subtitle {
            color: var(--hmm-gray);
            margin: 0.5rem 0 0 0;
            font-size: 1rem;
        }

        .hmm-header-actions {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .hmm-user-profile {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 0.5rem 1rem;
            background: var(--hmm-light);
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .hmm-user-profile:hover {
                background: #e9ecef;
            }

        .hmm-user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--hmm-primary), var(--hmm-secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
        }

        .hmm-user-info {
            display: flex;
            flex-direction: column;
        }

        .hmm-user-name {
            font-weight: 600;
            color: var(--hmm-dark);
            font-size: 0.9rem;
        }

        .hmm-user-role {
            font-size: 0.8rem;
            color: var(--hmm-gray);
        }

        /* Stats Grid Styles */
        .hmm-stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .hmm-stat-card {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid var(--hmm-border);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .hmm-stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
            }

            .hmm-stat-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 4px;
                height: 100%;
                background: linear-gradient(180deg, var(--hmm-primary), var(--hmm-secondary));
            }

        .hmm-stat-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1rem;
        }

        .hmm-stat-title {
            font-size: 0.9rem;
            color: var(--hmm-gray);
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .hmm-stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
            color: white;
        }

        .hmm-stat-icon--primary {
            background: linear-gradient(135deg, var(--hmm-primary), var(--hmm-primary-dark));
        }

        .hmm-stat-icon--success {
            background: linear-gradient(135deg, var(--hmm-success), #27ae60);
        }

        .hmm-stat-icon--warning {
            background: linear-gradient(135deg, var(--hmm-warning), #e67e22);
        }

        .hmm-stat-icon--danger {
            background: linear-gradient(135deg, var(--hmm-danger), #c0392b);
        }

        .hmm-stat-value {
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--hmm-dark);
            margin-bottom: 0.5rem;
        }

        .hmm-stat-change {
            display: flex;
            align-items: center;
            gap: 4px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .hmm-stat-change--positive {
            color: var(--hmm-success);
        }

        .hmm-stat-change--negative {
            color: var(--hmm-danger);
        }

        /* Charts Section */
        .hmm-charts-section {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .hmm-chart-card {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid var(--hmm-border);
        }

        .hmm-chart-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.5rem;
        }

        .hmm-chart-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--hmm-dark);
            margin: 0;
        }

        .hmm-chart-actions {
            display: flex;
            gap: 0.5rem;
        }

        .hmm-chart-action-btn {
            padding: 0.5rem 1rem;
            border: 1px solid var(--hmm-border);
            background: white;
            border-radius: 8px;
            font-size: 0.85rem;
            color: var(--hmm-gray);
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .hmm-chart-action-btn:hover {
                background: var(--hmm-light);
                color: var(--hmm-dark);
            }

        .hmm-chart-container {
            height: 300px;
            position: relative;
        }

        /* Recent Activity Section */
        .hmm-activity-section {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid var(--hmm-border);
            margin-bottom: 2rem;
        }

        .hmm-activity-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.5rem;
        }

        .hmm-activity-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--hmm-dark);
            margin: 0;
        }

        .hmm-activity-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .hmm-activity-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            background: var(--hmm-light);
            border-radius: 12px;
            transition: all 0.3s ease;
        }

            .hmm-activity-item:hover {
                background: #e9ecef;
                transform: translateX(5px);
            }

        .hmm-activity-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
            color: white;
        }

        .hmm-activity-icon--success {
            background: var(--hmm-success);
        }

        .hmm-activity-icon--primary {
            background: var(--hmm-primary);
        }

        .hmm-activity-icon--warning {
            background: var(--hmm-warning);
        }

        .hmm-activity-content {
            flex: 1;
        }

        .hmm-activity-text {
            font-weight: 500;
            color: var(--hmm-dark);
            margin-bottom: 0.25rem;
        }

        .hmm-activity-time {
            font-size: 0.85rem;
            color: var(--hmm-gray);
        }

        /* Quick Actions */
        .hmm-actions-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .hmm-action-card {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            text-align: center;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border: 1px solid var(--hmm-border);
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .hmm-action-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
                background: linear-gradient(135deg, var(--hmm-primary), var(--hmm-secondary));
                color: white;
            }

                .hmm-action-card:hover .hmm-action-icon,
                .hmm-action-card:hover .hmm-action-title,
                .hmm-action-card:hover .hmm-action-desc {
                    color: white;
                }

        .hmm-action-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--hmm-primary);
            transition: all 0.3s ease;
        }

        .hmm-action-title {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--hmm-dark);
            transition: all 0.3s ease;
        }

        .hmm-action-desc {
            font-size: 0.9rem;
            color: var(--hmm-gray);
            transition: all 0.3s ease;
        }

        /* Responsive Design */
        @@media (max-width: 1200px) {
            .hmm-charts-section

        {
            grid-template-columns: 1fr;
        }

        }

        @@media (max-width: 768px) {
            .hmm-sidebar-wrapper

        {
            transform: translateX(-100%);
        }

        .hmm-main-content {
            margin-left: 0;
            padding: 1rem;
        }

        .hmm-stats-grid {
            grid-template-columns: 1fr;
        }

        .hmm-dashboard-header {
            padding: 1rem;
        }

        .hmm-header-actions {
            flex-direction: column;
            align-items: flex-start;
        }

        }

        /* Utility Classes */
        .hmm-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .hmm-badge--success {
            background: rgba(46, 204, 113, 0.1);
            color: var(--hmm-success);
        }

        .hmm-badge--warning {
            background: rgba(243, 156, 18, 0.1);
            color: var(--hmm-warning);
        }

        .hmm-badge--danger {
            background: rgba(231, 76, 60, 0.1);
            color: var(--hmm-danger);
        }
    </style>
</head>
